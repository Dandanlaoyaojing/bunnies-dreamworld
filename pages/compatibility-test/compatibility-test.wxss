/* pages/compatibility-test/compatibility-test.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.loading {
  text-align: center;
  padding: 60rpx;
  font-size: 28rpx;
  color: #666;
}

.error-section {
  background: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #ff4757;
}

.error-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.error-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff4757;
}

.copy-btn {
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.error-message {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.results-section {
  background: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.overall-status {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
}

.overall-status.success {
  background: #d4edda;
  border: 2rpx solid #c3e6cb;
}

.overall-status.warning {
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
}

.status-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
}

.check-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.check-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.check-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.check-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.check-status.success {
  background: #d4edda;
  color: #155724;
}

.check-status.error {
  background: #f8d7da;
  color: #721c24;
}

.check-status.warning {
  background: #fff3cd;
  color: #856404;
}

.issues {
  margin-top: 15rpx;
}

.issue-item {
  display: block;
  font-size: 24rpx;
  color: #dc3545;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.network-type, .service-type {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.recommendations {
  background: #e3f2fd;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 30rpx;
}

.recommendations-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1976d2;
  display: block;
  margin-bottom: 15rpx;
}

.recommendation-item {
  display: block;
  font-size: 24rpx;
  color: #1976d2;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.action-btn.primary {
  background: #007bff;
  color: white;
}

.action-btn.secondary {
  background: #6c757d;
  color: white;
}

.instructions {
  background: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
}

.instructions-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.instruction-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}
