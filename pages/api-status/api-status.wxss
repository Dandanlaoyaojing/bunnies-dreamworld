/* pages/api-status/api-status.wxss */
.status-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.nav-icon {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.nav-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.nav-right {
  width: 60rpx;
}

/* 加载状态 */
.loading-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-icon {
  font-size: 48rpx;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 状态概览 */
.status-overview {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.overview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.overview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-indicator {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-indicator.active {
  background: #e8f5e8;
  color: #4caf50;
}

.status-indicator.inactive {
  background: #ffeaea;
  color: #f44336;
}

.status-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border-left: 6rpx solid #667eea;
}

.status-label {
  font-size: 24rpx;
  color: #666;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
}

.status-value.success {
  color: #4caf50;
}

.status-value.error {
  color: #f44336;
}

.status-value.warning {
  color: #ff9800;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn.secondary {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.action-btn.info {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

.action-btn.warning {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #8b4513;
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.action-btn[disabled] {
  opacity: 0.6;
  transform: none;
}

.btn-icon {
  margin-right: 15rpx;
  font-size: 32rpx;
}

.btn-text {
  font-size: 30rpx;
}

/* 测试结果 */
.test-results {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.results-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.result-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  border-radius: 15rpx;
  border-left: 6rpx solid;
}

.result-item.success {
  background: #f0f9ff;
  border-left-color: #4caf50;
}

.result-item.error {
  background: #fff5f5;
  border-left-color: #f44336;
}

.result-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  margin-top: 5rpx;
}

.result-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.result-test {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.result-source {
  font-size: 24rpx;
  color: #666;
}

.result-time {
  font-size: 22rpx;
  color: #999;
}

.result-error {
  font-size: 24rpx;
  color: #f44336;
  font-weight: bold;
}

/* 帮助部分 */
.help-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.help-header {
  margin-bottom: 20rpx;
}

.help-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.help-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.help-item {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
}

.help-icon {
  font-size: 32rpx;
  margin-top: 5rpx;
}

.help-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.help-text .help-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.help-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}
