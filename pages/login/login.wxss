/* pages/login/login.wxss */

/* 页面容器 */
.auth-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
}

/* 认证卡片 */
.auth-card {
  width: 100%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  padding: 60rpx 50rpx;
  box-sizing: border-box;
}

/* 头部区域 */
.auth-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-container {
  margin-bottom: 30rpx;
}

.logo {
  font-size: 80rpx;
  display: block;
}

.auth-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 16rpx;
}

.auth-subtitle {
  display: block;
  font-size: 28rpx;
  color: #718096;
  line-height: 1.5;
}

/* 模式切换器 */
.mode-switcher {
  margin-bottom: 50rpx;
}

.switch-tabs {
  display: flex;
  background: #f7fafc;
  border-radius: 16rpx;
  padding: 8rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab.active {
  background: #DBEAF8;
  box-shadow: 0 4rpx 12rpx rgba(219, 234, 248, 0.3);
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #718096;
  transition: color 0.3s ease;
}

.tab.active .tab-text {
  color: #2d3748;
  font-weight: 600;
}

/* 表单区域 */
.auth-form {
  width: 100%;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-container {
  position: relative;
  display: flex;
  align-items: center;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  transition: all 0.3s ease;
  min-height: 100rpx;
}

.input-container.focused {
  border-color: #C0D3E2;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(192, 211, 226, 0.1);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #a0aec0;
}

.auth-input {
  flex: 1;
  font-size: 30rpx;
  color: #2d3748;
  background: transparent;
  border: none;
  outline: none;
}

.auth-input::placeholder {
  color: #a0aec0;
}

.password-toggle {
  padding: 10rpx;
  cursor: pointer;
}

.toggle-icon {
  font-size: 28rpx;
  color: #a0aec0;
}

.input-error {
  display: block;
  font-size: 24rpx;
  color: #e53e3e;
  margin-top: 12rpx;
  margin-left: 24rpx;
}

/* 记住我和忘记密码 */
.remember-me {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: #DBEAF8;
  border-color: #DBEAF8;
}

.checkmark {
  font-size: 20rpx;
  font-weight: bold;
}

.checkbox.checked .checkmark {
  color: #2d3748;
}

.remember-text {
  font-size: 26rpx;
  color: #4a5568;
}

.forgot-password {
  font-size: 26rpx;
  color: #C0D3E2;
  text-decoration: underline;
}

/* 服务条款同意 */
.terms-agreement {
  margin-bottom: 40rpx;
}

.terms-text {
  font-size: 24rpx;
  color: #4a5568;
  line-height: 1.5;
}

.terms-link {
  color: #C0D3E2;
  text-decoration: underline;
  font-weight: 500;
}

/* 认证按钮 */
.auth-button {
  width: 100%;
  height: 100rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 网络诊断按钮 */
.network-diagnosis-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: 2rpx solid #C0D3E2;
  background: transparent;
  color: #4a5568;
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.network-diagnosis-btn:active {
  background: #F7FAFC;
  border-color: #A0AEC0;
}

.login-btn {
  background: #DBEAF8;
  color: #2d3748;
  box-shadow: 0 4rpx 12rpx rgba(219, 234, 248, 0.3);
}

.login-btn:active {
  box-shadow: 0 2rpx 6rpx rgba(219, 234, 248, 0.3);
}

.register-btn {
  background: #DBEAF8;
  color: #2d3748;
  box-shadow: 0 4rpx 12rpx rgba(219, 234, 248, 0.3);
}

.register-btn:active {
  box-shadow: 0 2rpx 6rpx rgba(219, 234, 248, 0.3);
}

.auth-button:disabled {
  background: #e2e8f0;
  color: #a0aec0;
  box-shadow: none;
}

.auth-button:active {
  transform: translateY(2rpx);
}

/* 社交登录 */
.social-login {
  margin-bottom: 40rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background: #e2e8f0;
}

.divider-text {
  font-size: 24rpx;
  color: #a0aec0;
  margin: 0 20rpx;
}

.social-buttons {
  display: flex;
  gap: 20rpx;
}

.social-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.wechat-btn:active {
  border-color: #1aad19;
  background: #f0f9f0;
}

.qq-btn:active {
  border-color: #12b7f5;
  background: #f0f9ff;
}

.social-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.social-text {
  font-size: 26rpx;
  color: #4a5568;
  font-weight: 500;
}

/* 模式切换链接 */
.mode-switch-link {
  text-align: center;
}

.switch-text {
  font-size: 26rpx;
  color: #718096;
}

.switch-link {
  color: #C0D3E2;
  font-weight: 600;
  text-decoration: underline;
  margin-left: 8rpx;
}
