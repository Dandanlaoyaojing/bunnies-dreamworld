/* pages/note-detail/note-detail.wxss */

/* 页面容器 */
.note-detail-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 导航栏 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.nav-icon {
  font-size: 36rpx;
  color: #EA4C89;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #385170;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  background: #f8f9fa;
  border: 1px solid #e9ecef;
}

.nav-btn-icon {
  font-size: 24rpx;
}

/* 通用卡片样式 */
.note-info-card,
.tags-card,
.source-card,
.content-card,
.attachments-card,
.footer-card {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1px solid #f1f3f4;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #385170;
  display: block;
  margin-bottom: 20rpx;
}

/* 笔记信息卡片 */
.note-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  line-height: 1.4;
  margin-bottom: 20rpx;
  display: block;
}

.note-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 20rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #718096;
}

/* 标签卡片 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  padding: 0 30rpx 30rpx;
}

.tag-item {
  background: linear-gradient(135deg, #EA4C89 0%, #FF6B9D 100%);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
}

.tag-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
}

/* 来源卡片 */
.source-text {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.6;
  padding: 0 30rpx 30rpx;
  display: block;
}

/* 内容卡片 */
.content-container {
  padding: 0 30rpx 30rpx;
}

.content-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #2d3748;
  white-space: pre-wrap;
  word-break: break-word;
}

/* 附件卡片 */
.images-section,
.voices-section {
  padding: 0 30rpx 30rpx;
}

.attachment-type {
  font-size: 26rpx;
  font-weight: 600;
  color: #385170;
  margin-bottom: 20rpx;
  display: block;
}

/* 图片网格 */
.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.image-item {
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f8f9fa;
}

.attachment-image {
  width: 100%;
  height: 100%;
}

/* 语音列表 */
.voices-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.voice-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1px solid #e9ecef;
}

.voice-info {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.voice-duration {
  font-size: 24rpx;
  font-weight: 600;
  color: #385170;
}

.voice-time {
  font-size: 20rpx;
  color: #718096;
}

.voice-controls {
  display: flex;
  align-items: center;
}

.play-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #EA4C89 0%, #FF6B9D 100%);
  border-radius: 30rpx;
}

.play-icon {
  font-size: 20rpx;
  color: #ffffff;
}

/* 底部信息卡片 */
.footer-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  padding: 0 30rpx 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1px solid #f1f3f4;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 24rpx;
  color: #718096;
}

.info-value {
  font-size: 24rpx;
  color: #2d3748;
  font-weight: 500;
}

/* 底部操作按钮 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.bottom-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 25rpx 15rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.edit-btn {
  background: linear-gradient(135deg, #007AFF 0%, #5AC8FA 100%);
  color: #ffffff;
}

.share-btn {
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  color: #ffffff;
}

.delete-btn {
  background: linear-gradient(135deg, #FF3B30 0%, #FF6961 100%);
  color: #ffffff;
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 22rpx;
  font-weight: 500;
}

.bottom-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}
