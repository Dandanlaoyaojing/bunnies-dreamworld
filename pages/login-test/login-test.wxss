/* pages/login-test/login-test.wxss - 登录功能测试页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #38a169 0%, #2f855a 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 输入区域 */
.input-section {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #38a169;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  background: #f8f9fa;
}

.input-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #a0aec0;
}

.auth-input {
  flex: 1;
  font-size: 30rpx;
  color: #2d3748;
  background: transparent;
  border: none;
  outline: none;
}

.auth-input::placeholder {
  color: #a0aec0;
}

/* 测试按钮 */
.test-buttons {
  margin-bottom: 30rpx;
}

.test-btn {
  width: 100%;
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 15rpx;
  transition: all 0.3s ease;
}

.test-btn.primary {
  background: linear-gradient(135deg, #38a169 0%, #2f855a 100%);
  color: white;
}

.test-btn.secondary {
  background: linear-gradient(135deg, #3182ce 0%, #2c5282 100%);
  color: white;
}

.test-btn.clear {
  background: linear-gradient(135deg, #718096 0%, #4a5568 100%);
  color: white;
}

.test-btn:disabled {
  opacity: 0.6;
  transform: none;
}

.test-btn:not(:disabled):active {
  transform: scale(0.98);
}

/* 结果容器 */
.result-container {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.result-header {
  border-bottom: 2rpx solid #eee;
  padding-bottom: 15rpx;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-content {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  border-left: 6rpx solid #38a169;
}

.result-text {
  font-size: 24rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 修复说明 */
.fix-info {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.fix-item {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.fix-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.fix-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #38a169;
  margin-bottom: 10rpx;
}

.fix-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 5rpx;
  padding-left: 20rpx;
}
