/* pages/dream-realm/dream-realm.wxss */
.dream-realm-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
}

/* 头部标题 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 创建梦境按钮 */
.create-section {
  margin-bottom: 40rpx;
}

.create-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%);
  border: none;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(255, 154, 158, 0.4);
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(255, 154, 158, 0.4);
}

.create-btn[disabled] {
  opacity: 0.7;
  transform: none;
}

.create-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.create-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 梦境列表 */
.dream-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  display: block;
  margin-bottom: 15rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  display: block;
}

/* 梦境项目 */
.dream-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.dream-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff9a9e 0%, #fecfef 50%, #667eea 100%);
}

.dream-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.dream-content {
  margin-bottom: 20rpx;
}

.dream-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #2d3748;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.dream-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dream-time {
  font-size: 24rpx;
  color: #a0aec0;
}

.dream-type {
  font-size: 24rpx;
}
