/* pages/my-notes/my-notes.wxss */

/* 页面容器 */
.my-notes-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 导航栏 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.nav-icon {
  font-size: 36rpx;
  color: #EA4C89;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #385170;
}

.view-mode-icon {
  font-size: 28rpx;
  color: #EA4C89;
  font-weight: bold;
}

/* 统计信息卡片 */
.stats-card {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #EA4C89;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #718096;
}

/* 搜索和筛选区域 */
.search-filter-section {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
}

/* 搜索框 */
.search-box {
  position: relative;
  margin-bottom: 30rpx;
  width: 100%;
}

.search-input {
  width: 100%;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx 80rpx 24rpx 30rpx;
  font-size: 28rpx;
  color: #385170;
  box-sizing: border-box;
  min-height: 80rpx;
  line-height: 1.4;
}

.search-input:focus {
  border-color: #EA4C89;
  background: #ffffff;
  box-shadow: 0 0 0 6rpx rgba(234, 76, 137, 0.1);
}

.search-btn {
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #C0D3E2;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.search-btn:active {
  background: #a8c4d9;
  transform: translateY(-50%) scale(0.95);
}

.search-icon {
  font-size: 28rpx;
  color: #ffffff;
}

/* 快速筛选按钮 */
.quick-filters {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.filter-btn.active {
  background: linear-gradient(135deg, #EA4C89 0%, #f56565 100%);
  border-color: #EA4C89;
  color: #ffffff;
}

.filter-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.filter-text {
  font-size: 24rpx;
  font-weight: 500;
  color: inherit;
}

/* 高级筛选 */
.advanced-filters {
  border-top: 1rpx solid #e2e8f0;
  padding-top: 30rpx;
}

.filter-group {
  margin-bottom: 25rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-label {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #385170;
  margin-bottom: 15rpx;
}

/* 日期范围容器 */
.date-range-container {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.date-picker {
  flex: 1;
  min-width: 0;
}

.date-separator {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
  white-space: nowrap;
}

.picker-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  transition: all 0.3s ease;
}

.picker-btn:active {
  background: #e2e8f0;
}

.picker-text {
  font-size: 26rpx;
  color: #385170;
}

.picker-arrow {
  font-size: 20rpx;
  color: #a0aec0;
}

/* 标签筛选 */
.tag-filters {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-filter {
  display: flex;
  align-items: center;
  background: #E3F2FD;
  color: #007AFF;
  padding: 8rpx 15rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  transition: all 0.3s ease;
}

.tag-filter.active {
  background: linear-gradient(135deg, #EA4C89 0%, #f56565 100%);
  color: #ffffff;
}

.tag-text {
  font-weight: 500;
}

.tag-count {
  margin-left: 8rpx;
  font-size: 20rpx;
  opacity: 0.8;
}

/* 笔记容器 */
.notes-container {
  padding: 0 30rpx;
}

/* 列表视图 */
.notes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.note-item {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
}

.note-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.note-main {
  padding: 30rpx;
}

.note-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.note-title-section {
  flex: 1;
}

.note-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #385170;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.note-category {
  display: flex;
  align-items: center;
}

.category-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.category-name {
  font-size: 22rpx;
  color: #718096;
}

.note-time {
  text-align: right;
  min-width: 200rpx;
}

.create-time, .update-time {
  display: block;
  font-size: 22rpx;
  color: #a0aec0;
  margin-bottom: 4rpx;
}

.update-time {
  font-size: 20rpx;
}

.note-content {
  margin-bottom: 20rpx;
}

.note-text {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.note-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.note-meta {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  flex: 1;
}

.note-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  background: #E3F2FD;
  color: #007AFF;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.source-tag {
  background: #FCE4EC;
  color: #E91E63;
  border: 1rpx solid #F8BBD9;
}

.note-stats {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.word-count, .attachment-count {
  font-size: 22rpx;
  color: #a0aec0;
}

.note-actions {
  display: flex;
  border-top: 1rpx solid #f7fafc;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.edit-btn {
  background: #E3F2FD;
  color: #007AFF;
}

.share-btn {
  background: #E8F5E8;
  color: #4CAF50;
}

.delete-btn {
  background: #FFEBEE;
  color: #F44336;
}

.action-btn:active {
  opacity: 0.7;
  transform: scale(0.98);
}

/* 网格视图 */
.notes-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.note-card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
  position: relative;
}

.note-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.card-main {
  padding: 30rpx;
  position: relative;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f7fafc;
}

.card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #385170;
  flex: 1;
  line-height: 1.3;
}

.card-category-icon {
  width: 24rpx;
  height: 24rpx;
}

.card-content {
  padding: 20rpx;
}

.card-text {
  font-size: 22rpx;
  color: #4a5568;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}

.card-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f7fafc;
}

.card-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 10rpx;
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.card-tag {
  background: #E3F2FD;
  color: #007AFF;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  font-size: 18rpx;
}

.card-tag.source-tag {
  background: #FCE4EC;
  color: #E91E63;
  border: 1rpx solid #F8BBD9;
}

.card-time {
  font-size: 20rpx;
  color: #a0aec0;
}

.card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.3s ease;
  pointer-events: none; /* 默认不接收点击事件 */
}

.note-card:active .card-overlay {
  opacity: 1;
  pointer-events: auto; /* 激活时接收点击事件 */
}

.card-actions {
  display: flex;
  gap: 30rpx;
}

.card-action-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  cursor: pointer;
  z-index: 10; /* 确保按钮在最上层 */
}

.card-action-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 1);
}

.card-action-icon {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #718096;
  display: block;
  margin-bottom: 40rpx;
}

.create-btn {
  background: linear-gradient(135deg, #EA4C89 0%, #f56565 100%);
  color: #ffffff;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 批量操作工具栏 */
.batch-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 200;
}

.batch-info {
  flex: 1;
}

.batch-count {
  font-size: 26rpx;
  color: #385170;
  font-weight: 500;
}

.batch-actions {
  display: flex;
  gap: 15rpx;
}

.batch-btn {
  padding: 12rpx 20rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #385170;
  transition: all 0.3s ease;
}

.batch-btn:active {
  background: #EA4C89;
  color: #ffffff;
  border-color: #EA4C89;
}

.batch-btn-text {
  font-weight: 500;
}

/* 导航按钮 */
.nav-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.nav-btn:active {
  transform: scale(0.9);
}

.knowledge-map-nav-btn {
  background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 216, 155, 0.3);
}

.view-mode-btn {
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
}

.nav-btn-icon {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
}

.view-mode-btn .nav-btn-icon {
  color: #4a5568;
}

/* 浮动操作按钮 */
.floating-actions {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 150;
}

.floating-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.floating-btn:active {
  transform: scale(0.95);
}

.floating-btn.create-btn {
  background: linear-gradient(135deg, #C0D3E2 0%, #C0D3E2 100%);
}

.floating-btn.search-btn {
  background: linear-gradient(135deg, #C0D3E2 0%, #C0D3E2 100%);
}

.floating-btn.knowledge-map-btn {
  background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
}

.floating-btn.batch-btn {
  background: linear-gradient(135deg, #C0D3E2 0%, #C0D3E2 100%);
}

.floating-icon {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .notes-grid {
    grid-template-columns: 1fr;
  }
  
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .quick-filters {
    justify-content: center;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.note-item, .note-card {
  animation: fadeIn 0.3s ease-out;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #718096;
  margin-left: 20rpx;
}
