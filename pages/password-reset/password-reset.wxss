/* pages/password-reset/password-reset.wxss - 密码重置页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0 40rpx;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0 20rpx;
  color: white;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.placeholder {
  width: 60rpx;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0 60rpx;
  padding: 0 40rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.step.active {
  opacity: 1;
}

.step.completed .step-number {
  background: #4CAF50;
  color: white;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.step-text {
  font-size: 22rpx;
  color: white;
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
  transition: all 0.3s ease;
}

.step-line.active {
  background: white;
}

/* 步骤内容 */
.step-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.step-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

/* 输入框 */
.input-group {
  margin-bottom: 30rpx;
}

.input-container {
  display: flex;
  align-items: center;
  padding: 25rpx 20rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.input-container.focused {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #a0aec0;
}

.auth-input {
  flex: 1;
  font-size: 30rpx;
  color: #2d3748;
  background: transparent;
  border: none;
  outline: none;
}

.auth-input::placeholder {
  color: #a0aec0;
}

.password-toggle {
  padding: 10rpx;
  cursor: pointer;
}

.toggle-icon {
  font-size: 28rpx;
  color: #a0aec0;
}

.input-error {
  display: block;
  font-size: 24rpx;
  color: #e53e3e;
  margin-top: 12rpx;
  margin-left: 24rpx;
}

/* 重新发送 */
.resend-section {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.resend-text {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.resend-btn {
  font-size: 26rpx;
  color: #667eea;
  text-decoration: underline;
}

.resend-btn.disabled {
  color: #a0aec0;
  text-decoration: none;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.6);
}

.submit-btn.active {
  background: white;
  color: #667eea;
}

.submit-btn.active:active {
  transform: scale(0.98);
}

/* 底部 */
.footer {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 40rpx;
}

.footer-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-right: 10rpx;
}

.footer-link {
  font-size: 26rpx;
  color: white;
  text-decoration: underline;
  font-weight: 500;
}
