/* pages/profile-edit/profile-edit.wxss */

.profile-edit-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 160rpx;
}

/* 导航栏 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.nav-right {
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.nav-icon {
  font-size: 36rpx;
  color: #C0D3E2;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.nav-btn {
  padding: 12rpx 24rpx;
  background: #DBEAF8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.nav-btn:active {
  background: #C0D3E2;
  transform: scale(0.95);
}

.nav-btn-text {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 500;
}

/* 头像编辑区域 */
.avatar-section {
  padding: 30rpx;
}

.avatar-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #385170;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.avatar-preview {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #DBEAF8;
  box-shadow: 0 8rpx 24rpx rgba(219, 234, 248, 0.4);
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-container:active .avatar-overlay {
  opacity: 1;
}

.overlay-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.overlay-text {
  font-size: 24rpx;
  color: #ffffff;
}

.avatar-tip {
  font-size: 24rpx;
  color: #718096;
  text-align: center;
  line-height: 1.5;
}

/* 信息卡片通用样式 */
.info-section,
.contact-section,
.other-section {
  padding: 0 30rpx 30rpx;
}

.info-card,
.contact-card,
.other-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(192, 211, 226, 0.2);
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #385170;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 26rpx;
  color: #4a5568;
  font-weight: 500;
}

.label-required {
  color: #e53e3e;
  margin-left: 4rpx;
  font-size: 28rpx;
}

.label-tag {
  margin-left: 12rpx;
  padding: 4rpx 12rpx;
  background: rgba(192, 211, 226, 0.2);
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #718096;
}

.label-tag.readonly {
  background: rgba(226, 232, 240, 0.5);
}

/* 表单输入 */
.form-input,
.form-textarea {
  width: 100%;
  padding: 20rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2d3748;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus,
.form-textarea:focus {
  border-color: #C0D3E2;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(192, 211, 226, 0.1);
}

.form-input::placeholder,
.form-textarea::placeholder {
  color: #a0aec0;
}

.form-textarea {
  min-height: 150rpx;
  line-height: 1.6;
}

/* 只读字段 */
.form-value.readonly {
  padding: 20rpx;
  background: rgba(226, 232, 240, 0.3);
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
}

.value-text {
  font-size: 28rpx;
  color: #718096;
}

/* 选择器 */
.form-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.picker-display:active {
  background: #e2e8f0;
}

.picker-text {
  font-size: 28rpx;
  color: #2d3748;
}

.picker-arrow {
  font-size: 24rpx;
  color: #a0aec0;
}

/* 简介项特殊样式 */
.bio-item {
  margin-bottom: 0;
}

.char-count {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}

.count-text {
  font-size: 22rpx;
  color: #a0aec0;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #ffffff;
  border-top: 1rpx solid #e2e8f0;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.reset-btn {
  background: #f7fafc;
  color: #718096;
  border: 2rpx solid #e2e8f0;
}

.reset-btn:active {
  background: #e2e8f0;
  transform: scale(0.98);
}

.save-btn-main {
  background: linear-gradient(135deg, #DBEAF8 0%, #C0D3E2 100%);
  color: #2d3748;
  box-shadow: 0 8rpx 24rpx rgba(219, 234, 248, 0.3);
}

.save-btn-main:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(219, 234, 248, 0.3);
}

.save-btn-main:disabled {
  background: #e2e8f0;
  color: #a0aec0;
  box-shadow: none;
}

.btn-text {
  color: inherit;
}

/* 底部安全区域 */
.safe-area {
  height: 40rpx;
}
