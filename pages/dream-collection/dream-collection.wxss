/* pages/dream-collection/dream-collection.wxss */

.dream-collection-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

/* 顶部导航 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left, .nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 36rpx;
  color: #C0D3E2;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 搜索栏 */
.search-section {
  padding: 20rpx 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #e2e8f0;
}

.search-icon {
  font-size: 28rpx;
  color: #C0D3E2;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #4a5568;
}

/* 标签页 */
.tab-bar {
  display: flex;
  padding: 0 30rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #f7fafc;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #C0D3E2;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 26rpx;
  color: #4a5568;
  margin-bottom: 6rpx;
}

.tab-item.active .tab-text {
  color: #2d3748;
  font-weight: 600;
}

.tab-count {
  font-size: 22rpx;
  color: #718096;
  background: #e2e8f0;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

/* 排序选项 */
.sort-section {
  padding: 20rpx 30rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.sort-options {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex-wrap: wrap;
}

.sort-label {
  font-size: 24rpx;
  color: #4a5568;
  margin-right: 10rpx;
}

.sort-item {
  padding: 10rpx 16rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.sort-item.active {
  background: #C0D3E2;
  border-color: #C0D3E2;
  box-shadow: 0 2rpx 6rpx rgba(192, 211, 226, 0.3);
}

.sort-text {
  font-size: 22rpx;
  color: #4a5568;
}

.sort-item.active .sort-text {
  color: #ffffff;
  font-weight: 600;
}

/* 梦境列表 */
.dream-list {
  padding: 20rpx 30rpx;
  padding-bottom: 120rpx;
}

.dream-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.dream-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.dream-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.dream-type {
  display: flex;
  align-items: center;
}

.type-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.type-name {
  font-size: 26rpx;
  color: #C0D3E2;
  font-weight: 600;
}

.dream-time {
  background: #f7fafc;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.time-text {
  font-size: 22rpx;
  color: #718096;
}

.dream-preview {
  margin-bottom: 20rpx;
}

.preview-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #4a5568;
}

.dream-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dream-stats {
  display: flex;
  gap: 15rpx;
}

.stat-item {
  font-size: 22rpx;
  color: #718096;
  background: #f7fafc;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  border: 1rpx solid #e2e8f0;
}

.dream-actions {
  display: flex;
  gap: 12rpx;
}

.action-icon {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.action-icon:active {
  background: #e2e8f0;
  transform: scale(0.9);
}

.icon {
  font-size: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 30rpx;
  text-align: center;
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  color: #2d3748;
  font-weight: 600;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #718096;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.create-btn {
  background: #C0D3E2;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(192, 211, 226, 0.3);
}

.create-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(192, 211, 226, 0.3);
}

.btn-text {
  color: inherit;
}

/* 梦境详情弹窗 */
.dream-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.dream-detail-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.dream-detail-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.modal-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 32rpx;
  color: #2d3748;
  font-weight: bold;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7fafc;
  border-radius: 50%;
}

.close-icon {
  font-size: 28rpx;
  color: #718096;
}

.modal-body {
  flex: 1;
  padding: 30rpx 40rpx;
  overflow-y: auto;
}

.dream-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f7fafc;
  border-radius: 16rpx;
}

.meta-item {
  font-size: 26rpx;
  color: #718096;
}

.dream-full-content {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid #e2e8f0;
}

.full-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #2d3748;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #e2e8f0;
  background: #f7fafc;
}

.modal-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 16rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.share-btn {
  background: rgba(59, 130, 246, 0.1);
  color: #3b82f6;
}

.share-btn:active {
  background: rgba(59, 130, 246, 0.2);
}

.uncollect-btn {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
}

.uncollect-btn:active {
  background: rgba(239, 68, 68, 0.2);
}

.delete-btn {
  background: rgba(107, 114, 128, 0.1);
  color: #6b7280;
}

.delete-btn:active {
  background: rgba(107, 114, 128, 0.2);
}

.btn-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}
