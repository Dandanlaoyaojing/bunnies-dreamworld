/* pages/notebook/notebook.wxss */
.notebook-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #FFFFFF;
  border-bottom: 1px solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-left, .nav-right {
  width: 120rpx;
  display: flex;
  justify-content: center;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-icon {
  font-size: 36rpx;
  color: #EA4C89;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #385170;
}

.nav-action {
  font-size: 28rpx;
  color: #007AFF;
  font-weight: 500;
}

/* 搜索栏 */
.search-section {
  padding: 30rpx;
}

.search-box {
  position: relative;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.08);
}

.search-input {
  flex: 1;
  border: none;
  font-size: 28rpx;
  color: #2d3748;
  background: transparent;
}

.search-input::placeholder {
  color: #718096;
}

.search-icon {
  font-size: 28rpx;
  color: #718096;
  margin-left: 20rpx;
}

/* 笔记列表 */
.notes-container {
  padding: 0 30rpx 30rpx;
}

.note-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.note-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.12);
}

.note-info-card {
  padding: 30rpx;
}

.note-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.note-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  flex: 1;
  line-height: 1.4;
}

.note-time {
  font-size: 24rpx;
  color: #718096;
}

.note-content {
  margin-bottom: 20rpx;
}

.note-text {
  font-size: 28rpx;
  color: #4a5568;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.note-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.note-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  background: linear-gradient(135deg, #EA4C89 0%, #FF6B9D 100%);
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.word-count {
  font-size: 24rpx;
  color: #718096;
}

.note-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  border-top: 1px solid #e9ecef;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.edit-btn {
  background: linear-gradient(135deg, #007AFF 0%, #5AC8FA 100%);
  color: #ffffff;
}

.edit-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.delete-btn {
  background: linear-gradient(135deg, #FF3B30 0%, #FF6961 100%);
  color: #ffffff;
}

.delete-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  padding: 30rpx;
}

.empty-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 80rpx 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #718096;
  display: block;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.create-btn {
  background: linear-gradient(135deg, #EA4C89 0%, #FF6B9D 100%);
  color: #ffffff;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 15rpx rgba(234, 76, 137, 0.3);
}

.create-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 浮动创建按钮 */
.floating-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #EA4C89 0%, #FF6B9D 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(234, 76, 137, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.floating-btn:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 20rpx rgba(234, 76, 137, 0.6);
}

.floating-icon {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: bold;
}
