<!--pages/art/art.wxml-->
<view class="container">
  <!-- 顶部区域 -->
  <view class="header">
    <text class="app-title">简约笔记·艺术版</text>
    <input class="title-input" placeholder="输入笔记标题..." value="{{noteTitle}}" bindinput="onTitleInput" />
  </view>
  
  <!-- 核心编辑区 -->
  <view class="editor-container">
    <textarea class="main-editor" 
              placeholder="在这里记录你的艺术灵感..." 
              value="{{noteContent}}" 
              bindinput="onContentInput"
              auto-height="{{true}}"
              maxlength="5000">
    </textarea>
  </view>
  
  <!-- 功能工具栏 -->
  <view class="toolbar">
    <view class="tool-item {{currentMode === 'text' ? 'active' : ''}}" bindtap="switchMode" data-mode="text">
      <text class="tool-icon">✏️</text>
      <text class="tool-text">文字</text>
    </view>
    <view class="tool-item" bindtap="startVoiceInput">
      <text class="tool-icon">🎤</text>
      <text class="tool-text">语音</text>
    </view>
    <view class="tool-item" bindtap="chooseImage">
      <text class="tool-icon">🖼️</text>
      <text class="tool-text">图片</text>
    </view>
    <view class="tool-item ai-btn" bindtap="showAIHelper">
      <text class="tool-icon">🤖</text>
      <text class="tool-text">AI助手</text>
    </view>
    <view class="tool-item save-btn" bindtap="saveNote">
      <text class="tool-icon">💾</text>
      <text class="tool-text">保存</text>
    </view>
  </view>
  
  <!-- 智能标签区 -->
  <view class="tags-section">
    <text class="section-title">智能标签</text>
    <view class="tags-container">
      <view class="tag" wx:for="{{tags}}" wx:key="*this" bindtap="removeTag" data-tag="{{item}}">
        #{{item}}
        <text class="tag-remove">×</text>
      </view>
      <view class="add-tag" bindtap="addTag">
        <text class="add-tag-text">+ 添加标签</text>
      </view>
    </view>
  </view>
  
  <!-- 底部状态栏 -->
  <view class="status-bar">
    <view class="status-item">
      <text class="status-text">字数: {{wordCount}}</text>
    </view>
    <view class="status-item">
      <text class="status-text">{{createTime}}</text>
    </view>
    <view class="status-item">
      <text class="status-text sync-status {{isSynced ? 'synced' : 'unsynced'}}">
        {{isSynced ? '已同步' : '未同步'}}
      </text>
    </view>
  </view>
</view>
