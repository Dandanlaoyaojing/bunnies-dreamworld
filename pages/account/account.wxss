/* pages/account/account.wxss */

.account-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 120rpx;
}

/* 顶部导航 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left, .nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 36rpx;
  color: #C0D3E2;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 用户信息区域 */
.profile-section {
  padding: 20rpx 30rpx;
}

.profile-card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  padding: 40rpx;
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #DBEAF8;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: #DBEAF8;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #ffffff;
}

.edit-icon {
  font-size: 20rpx;
}

.profile-info {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 8rpx;
  display: block;
}

.user-id {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 12rpx;
  display: block;
}

.user-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-dot.online {
  background: #48bb78;
}

.status-dot.offline {
  background: #a0aec0;
}

.status-text {
  font-size: 22rpx;
  color: #718096;
}

.profile-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
  border-top: 1rpx solid #e2e8f0;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #718096;
}

/* 功能分类 */
.function-sections {
  padding: 0 30rpx;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.function-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.function-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.function-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin: 0 auto 16rpx;
}

.function-name {
  font-size: 24rpx;
  color: #2d3748;
  font-weight: 500;
}

/* 功能图标颜色 */
.profile-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.password-icon {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.privacy-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.notification-icon {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.sync-up-icon {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.sync-down-icon {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.backup-icon {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.cache-icon {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
}

.dan-icon {
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
}

.view-icon {
  background: linear-gradient(135deg, #fad0c4 0%, #ffd1ff 100%);
}

.recovery-icon {
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
}

.network-icon {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.contact-icon {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.update-icon {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.about-icon {
  background: linear-gradient(135deg, #DBEAF8 0%, #C0D3E2 100%);
}

.logout-icon {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
}

/* 存储信息卡片 */
.storage-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.storage-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.storage-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 24rpx;
}

.storage-content {
  flex: 1;
}

.storage-title {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.storage-desc {
  font-size: 24rpx;
  color: #718096;
  display: block;
}

.storage-progress {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}

.progress-bar {
  width: 120rpx;
  height: 8rpx;
  background: #e2e8f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-right: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 20rpx;
  color: #718096;
  font-weight: 600;
}

.storage-details {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #e2e8f0;
}

.detail-item {
  text-align: center;
}

.detail-label {
  font-size: 22rpx;
  color: #718096;
  display: block;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 24rpx;
  color: #2d3748;
  font-weight: 600;
}

/* 开发者工具 */
.dev-section {
  padding: 0 30rpx;
  margin-top: 30rpx;
}

.dev-btn {
  width: 100%;
  height: 80rpx;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #718096;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.dev-btn:active {
  background: #f7fafc;
  border-color: #cbd5e0;
}














