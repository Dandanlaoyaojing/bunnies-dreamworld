/* pages/account/account.wxss */

/* 页面容器 */
.account-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 导航栏 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left, .nav-right {
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 36rpx;
  color: #EA4C89;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 用户信息卡片 */
.profile-card {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  padding: 40rpx;
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #EA4C89;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  background: #EA4C89;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #ffffff;
}

.edit-icon {
  font-size: 20rpx;
}

.profile-info {
  flex: 1;
}

.username {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 8rpx;
}

.user-id {
  display: block;
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 12rpx;
}

.user-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
}

.status-dot.online {
  background: #48bb78;
}

.status-dot.offline {
  background: #a0aec0;
}

.status-text {
  font-size: 24rpx;
  color: #718096;
}

.profile-stats {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #e2e8f0;
  padding-top: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #EA4C89;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #718096;
}

/* 设置卡片 */
.settings-card, .storage-card, .subscription-card, .other-card {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 设置列表 */
.settings-list, .other-list {
  padding: 0;
}

.setting-item, .other-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f7fafc;
  transition: background-color 0.3s ease;
}

.setting-item:last-child, .other-item:last-child {
  border-bottom: none;
}

.setting-item:active, .other-item:active {
  background-color: #f7fafc;
}

.setting-icon, .other-icon {
  width: 60rpx;
  height: 60rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 24rpx;
}

.setting-content, .other-content {
  flex: 1;
}

.setting-title, .other-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2d3748;
  margin-bottom: 6rpx;
}

.setting-desc, .other-desc {
  font-size: 24rpx;
  color: #718096;
}

.setting-arrow, .other-arrow {
  font-size: 24rpx;
  color: #a0aec0;
  font-weight: bold;
}

/* 存储管理 */
.storage-info {
  padding: 30rpx 40rpx;
}

.storage-warning {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 12rpx;
  text-align: center;
}

.warning-text {
  color: #856404;
  font-size: 28rpx;
  font-weight: 500;
}

.storage-detail {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-left: 16rpx;
}

.storage-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.storage-item:last-child {
  margin-bottom: 0;
}

.storage-icon {
  width: 60rpx;
  height: 60rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 24rpx;
}

.storage-content {
  flex: 1;
  margin-right: 20rpx;
}

.storage-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2d3748;
  margin-bottom: 6rpx;
}

.storage-desc {
  font-size: 24rpx;
  color: #718096;
}

.storage-progress {
  width: 120rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e2e8f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #EA4C89 0%, #f56565 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.storage-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 40rpx 30rpx;
}

.storage-btn {
  flex: 1;
  height: 70rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #4a5568;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.storage-btn:active {
  background: #EA4C89;
  border-color: #EA4C89;
  color: #ffffff;
}

.storage-btn.recovery-btn {
  background: #ff6b6b;
  border-color: #ff6b6b;
  color: #ffffff;
}

.storage-btn.recovery-btn:active {
  background: #ff5252;
  border-color: #ff5252;
}

.storage-btn.test-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border: none;
  color: #ffffff;
  margin-top: 20rpx;
}

.storage-btn.test-btn:active {
  background: linear-gradient(135deg, #e91e63 0%, #f06292 100%);
}

/* 云存储同步 */
.cloud-sync-section {
  margin: 40rpx 40rpx 0;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.cloud-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.cloud-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.cloud-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.cloud-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.cloud-btn {
  flex: 1;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.cloud-btn.primary {
  background: #ffffff;
  color: #667eea;
}

.cloud-btn.primary:active {
  background: rgba(255, 255, 255, 0.9);
  transform: scale(0.98);
}

.cloud-btn.secondary {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.cloud-btn.secondary:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

.cloud-btn.config-btn {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  margin-top: 20rpx;
}

.cloud-btn.config-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

.cloud-benefits {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.benefit-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.benefit-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 订阅管理 */
.subscription-info {
  padding: 30rpx 40rpx;
}

.subscription-item {
  display: flex;
  align-items: center;
}

.subscription-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #EA4C89 0%, #f56565 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 24rpx;
}

.subscription-content {
  flex: 1;
}

.subscription-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2d3748;
  margin-bottom: 6rpx;
}

.subscription-desc {
  font-size: 24rpx;
  color: #718096;
}

.subscription-status {
  margin-left: 20rpx;
}

.status-text.active {
  color: #48bb78;
}

.status-text.inactive {
  color: #a0aec0;
}

.subscription-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 40rpx 30rpx;
}

.subscription-btn {
  flex: 1;
  height: 70rpx;
  background: linear-gradient(135deg, #EA4C89 0%, #f56565 100%);
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.subscription-btn.secondary {
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  color: #4a5568;
}

.subscription-btn:active {
  transform: translateY(2rpx);
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.quick-login-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.quick-login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.logout-btn {
  width: 100%;
  height: 80rpx;
  background: #ffffff;
  border: 2rpx solid #e53e3e;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #e53e3e;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.logout-btn:active {
  background: #e53e3e;
  color: #ffffff;
}
