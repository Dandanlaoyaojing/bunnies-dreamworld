/* pages/note-editor/note-editor.wxss - 简约笔记·智能版 */
.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 0;
  position: relative;
}


/* 顶部区域 */
.header {
  background: rgba(255, 255, 255, 0.95);
  padding: 40rpx 30rpx 30rpx;
  color: #333;
  position: relative;
  border-radius: 12rpx;
  margin: 30rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  backdrop-filter: blur(10rpx);
}



.title-input {
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
  line-height: 80rpx;
  height: 80rpx;
  outline: none;
  cursor: text;
  vertical-align: middle;
  backdrop-filter: blur(10rpx);
  margin-bottom: 20rpx;
}

.url-input {
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #666;
  width: 100%;
  box-sizing: border-box;
  line-height: 60rpx;
  height: 60rpx;
  outline: none;
  cursor: text;
  vertical-align: middle;
  backdrop-filter: blur(10rpx);
}

/* 分类选择区域 */
.category-section {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 30rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  backdrop-filter: blur(10rpx);
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  font-weight: 600;
}

.categories {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
  max-width: 100%;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 8rpx;
  border-radius: 12rpx;
  background: #F9F9F9;
  transition: all 0.3s ease;
  justify-content: center;
  aspect-ratio: 1;
}

.category-item.selected {
  background: #E3F2FD;
  transform: scale(1.05);
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.2;
}

.category-item.selected .category-name {
  color: #007AFF;
  font-weight: 500;
}

/* 核心编辑区 */
.editor-container {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.main-editor {
  width: 100%;
  min-height: 400rpx;
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background: transparent;
  border: none;
  box-sizing: border-box;
}

/* 功能工具栏 */
.toolbar {
  background: transparent;
  margin: 0 30rpx;
  padding: 30rpx;
}

.toolbar-row {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 15rpx;
  align-items: center;
}


.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 15rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  width: 100rpx;
  border: none;
}

.tool-item:active {
  transform: scale(0.95);
}

.image-btn {
  background: transparent;
  color: #4CAF50;
}

.image-btn:active {
  background: rgba(76, 175, 80, 0.1);
}


.save-btn {
  background: transparent;
  color: #495057;
}

.save-btn:active {
  background: rgba(227, 242, 253, 0.5);
}

.voice-btn {
  background: transparent;
  color: #7D7DFF;
}

.voice-btn:active {
  background: rgba(125, 125, 255, 0.1);
}

.test-btn {
  background: transparent;
  color: #FF6B6B;
}

.test-btn:active {
  background: rgba(255, 107, 107, 0.1);
}

.api-btn {
  background: transparent;
  color: #4CAF50;
}

.api-btn:active {
  background: rgba(76, 175, 80, 0.1);
}



.tool-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 8rpx;
}

.tool-text {
  font-size: 22rpx;
  color: inherit;
  font-weight: 500;
  text-align: center;
  width: 100%;
  line-height: 1.2;
}




/* 语音条区域样式 */
.voices-section {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 30rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  backdrop-filter: blur(10rpx);
}

.voices-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.voice-item {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  padding: 20rpx;
  border: 1px solid rgba(229, 229, 229, 0.3);
}

.voice-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.voice-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.voice-icon {
  font-size: 40rpx;
  color: #7D7DFF;
}

.voice-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.voice-duration {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.voice-time {
  font-size: 24rpx;
  color: #666;
}

.voice-actions {
  display: flex;
  gap: 15rpx;
}

.play-btn {
  background: #4CAF50;
  color: white;
}

.play-btn:active {
  background: #45a049;
}

.convert-btn {
  background: #2196F3;
  color: white;
}

.convert-btn:active {
  background: #1976D2;
}

/* 图片区域 */
.images-section {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 30rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  backdrop-filter: blur(10rpx);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.section-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  transition: all 0.3s ease;
}

.config-btn {
  background: #FF9500;
  color: white;
}

.config-btn:active {
  background: #E6850E;
  transform: scale(0.95);
}

.test-ocr-btn {
  background: #34C759;
  color: white;
}

.test-ocr-btn:active {
  background: #28A745;
  transform: scale(0.95);
}

.upload-all-btn {
  background: #007AFF;
  color: white;
}

.upload-all-btn:active {
  background: #0056CC;
  transform: scale(0.95);
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.image-item {
  position: relative;
  background: #F8F9FA;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1px solid #E9ECEF;
}

.image-container {
  position: relative;
  width: 100%;
  height: 200rpx;
  overflow: hidden;
}

.image-preview {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.image-container:active .image-preview {
  transform: scale(1.05);
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 20rpx 15rpx 15rpx;
  color: white;
}

.image-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.image-size {
  font-size: 20rpx;
  opacity: 0.9;
}

.image-time {
  font-size: 18rpx;
  opacity: 0.8;
}

.upload-status {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: rgba(76, 175, 80, 0.9);
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 18rpx;
}

.status-text {
  font-size: 18rpx;
}

.image-actions {
  display: flex;
  justify-content: space-around;
  padding: 15rpx;
  background: white;
  border-top: 1px solid #E9ECEF;
}

.image-actions .action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.preview-btn {
  background: #007AFF;
  color: white;
}

.preview-btn:active {
  background: #0056CC;
  transform: scale(0.9);
}

.upload-btn {
  background: #34C759;
  color: white;
}

.upload-btn:active {
  background: #28A745;
  transform: scale(0.9);
}

.delete-btn {
  background: #FF3B30;
  color: white;
}

.delete-btn:active {
  background: #D70015;
  transform: scale(0.9);
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 22rpx;
  font-weight: 500;
}

/* 智能标签区 */
.tags-section {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 30rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  backdrop-filter: blur(10rpx);
}

.tags-section .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.tags-section .section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.tags-section .section-actions {
  display: flex;
  gap: 10rpx;
}

.refresh-tags-btn {
  background: #CCCCCC;
  color: #333;
}

.refresh-tags-btn:active {
  background: #B8B8B8;
  transform: scale(0.95);
}

.clear-tags-btn {
  background: #CCCCCC;
  color: #333;
}

.clear-tags-btn:active {
  background: #B8B8B8;
  transform: scale(0.95);
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag {
  background: #E3F2FD;
  color: #007AFF;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tag-remove {
  color: #999;
  font-size: 28rpx;
  cursor: pointer;
}

.tags-empty {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #999;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
}

.tags-actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.add-tag {
  background: #F0F0F0;
  color: #666;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: 1px dashed #CCC;
  transition: all 0.3s ease;
}

.add-tag:active {
  background: #E0E0E0;
  transform: scale(0.95);
}

.add-tag-text {
  font-size: 24rpx;
  color: #666;
}

/* 底部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  margin: 0 30rpx 30rpx;
  border-radius: 12rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  border-top: 1px solid rgba(240, 240, 240, 0.5);
  backdrop-filter: blur(10rpx);
}

.status-item {
  flex: 1;
  text-align: center;
}

.status-text {
  font-size: 22rpx;
  color: #999;
}

.sync-status.synced {
  color: #4CAF50;
}

.sync-status.unsynced {
  color: #FF9800;
}
