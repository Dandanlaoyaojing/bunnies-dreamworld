/* pages/note-editor/note-editor.wxss - Dribbble简约风格 */

/* 页面容器 */
.note-editor-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 导航栏 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.nav-btn-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.nav-icon {
  font-size: 36rpx;
  color: #D38FD8;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.nav-btn {
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.new-note-btn {
  background: #f7fafc;
  border: 1rpx solid #e2e8f0;
}

.save-btn {
  background: linear-gradient(135deg, #D38FD8 0%, #7372BF 100%);
  box-shadow: 0 4rpx 12rpx rgba(211, 143, 216, 0.15);
}

.nav-btn-text {
  font-size: 26rpx;
  font-weight: 500;
}

.new-note-btn .nav-btn-text {
  color: #4a5568;
}

.save-btn .nav-btn-text {
  color: #ffffff;
}

.share-btn {
  background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
  box-shadow: 0 4rpx 12rpx rgba(66, 153, 225, 0.3);
}

.share-btn .nav-btn-text {
  color: #ffffff;
}

/* 卡片通用样式 */
.title-card, .category-card, .content-card, .tags-card, .attachments-card, .save-options-card {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 标题输入 */
.title-input {
  width: 100%;
  padding: 30rpx 30rpx;
  font-size: 32rpx;
  color: #2d3748;
  border: none;
  outline: none;
  background: transparent;
  box-sizing: border-box;
}

/* 分类选择 */
.categories-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 30rpx 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 16rpx;
  background: #f7fafc;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.category-item.selected {
  background: #DBEAF8 !important;
  border-color: #DBEAF8 !important;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(219, 234, 248, 0.2);
}

.category-item:hover:not(.selected) {
  background: #e9ecef;
  border-color: #dee2e6;
}

.category-item:active:not(.selected) {
  transform: scale(0.95);
  opacity: 0.8;
}

.category-item.selected:active {
  transform: scale(0.95) translateY(-2rpx);
  opacity: 0.9;
}

.category-item.selected:hover {
  background: rgba(219, 234, 248, 0.4);
  border-color: #DBEAF8;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
  border-radius: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #4a5568;
  text-align: center;
  font-weight: 500;
}

.category-item.selected .category-name {
  color: #2d3748;
  font-weight: 600;
}

/* 内容编辑 */
.content-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  background: #f7fafc;
  transition: all 0.3s ease;
  border: 1rpx solid #e2e8f0;
}

.action-btn:active {
  transform: scale(0.95);
  background: #e2e8f0;
}

.image-btn {
  color: #4CAF50;
}

.voice-btn {
  color: #7D7DFF;
}

.stop-btn {
  color: #FF6B6B;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 20rpx;
  font-weight: 500;
}

.content-editor {
  width: 100%;
  min-height: 300rpx;
  padding: 30rpx 30rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #2d3748;
  background: transparent;
  border: none;
  outline: none;
  box-sizing: border-box;
}

/* 智能标签 */
.tag-actions {
  display: flex;
  gap: 10rpx;
}

.generate-btn {
  background: linear-gradient(135deg, #D38FD8 0%, #7372BF 100%);
  color: #ffffff;
  border: none;
}

.add-btn {
  background: #f7fafc;
  color: #4a5568;
  border: 1rpx solid #e2e8f0;
}

.clear-btn {
  background: #fed7d7;
  color: #e53e3e;
  border: 1rpx solid #feb2b2;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  padding: 30rpx 30rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background: #E3F2FD;
  color: #007AFF;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.tag-item:active {
  background: #BBDEFB;
  transform: scale(0.95);
}

.tag-text {
  font-weight: 500;
}

.tag-remove {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #999;
}

.tags-empty {
  padding: 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 24rpx;
  color: #a0aec0;
}

/* 笔记来源 */
