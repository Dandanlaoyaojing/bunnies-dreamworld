}

.source-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.clear-btn {
  background: #fef2f2;
  color: #dc2626;
  border: 1rpx solid #fecaca;
}

.source-container {
  padding: 30rpx 40rpx;
}

.source-item {
  display: flex;
  align-items: center;
  background: #f0f9ff;
  color: #0369a1;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e0f2fe;
  transition: all 0.3s ease;
}

.source-item:active {
  background: #e0f2fe;
  transform: scale(0.98);
}

.source-text {
  font-size: 26rpx;
  font-weight: 500;
  flex: 1;
}

.source-empty {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8fafc;
  color: #64748b;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  border: 2rpx dashed #cbd5e1;
  transition: all 0.3s ease;
}

.source-empty:active {
  background: #f1f5f9;
  border-color: #94a3b8;
}

.add-icon {
  font-size: 32rpx;
  color: #94a3b8;
  font-weight: 300;
}

/* 附件管理 */
.attachment-count {
  font-size: 24rpx;
  color: #a0aec0;
  background: #f7fafc;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.attachment-section {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #f7fafc;
}

.attachment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.attachment-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #4a5568;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.image-attachment {
  position: relative;
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid #e9ecef;
}

.attachment-image {
  width: 100%;
  height: 200rpx;
  transition: transform 0.3s ease;
}

.image-attachment:active .attachment-image {
  transform: scale(1.05);
}

.attachment-actions {
  display: flex;
  justify-content: space-around;
  padding: 15rpx;
  background: #ffffff;
  border-top: 1rpx solid #e9ecef;
}

.attachment-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.ocr-btn, .convert-btn {
  background: #2196F3;
  color: white;
}

.play-btn {
  background: #4CAF50;
  color: white;
}

.delete-btn {
  background: #FF3B30;
  color: white;
}

.attachment-btn:active {
  transform: scale(0.9);
}

.btn-icon {
  width: 24rpx;
  height: 24rpx;
}

.voices-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.voice-attachment {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 1rpx solid #e9ecef;
}

.voice-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.voice-icon {
  width: 40rpx;
  height: 40rpx;
}

.voice-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.voice-duration {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

.voice-time {
  font-size: 24rpx;
  color: #a0aec0;
}

/* 保存选项 */
.save-options {
  padding: 30rpx 40rpx;
}

.save-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f7fafc;
}

.save-option:last-child {
  border-bottom: none;
}

.option-info {
  flex: 1;
}

.option-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2d3748;
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 24rpx;
  color: #a0aec0;
}

.option-switch {
  width: 80rpx;
  height: 40rpx;
  background: #e2e8f0;
  border-radius: 20rpx;
  position: relative;
  transition: all 0.3s ease;
}

.option-switch.active {
  background: linear-gradient(135deg, #D38FD8 0%, #7372BF 100%);
}

.switch-thumb {
  width: 32rpx;
  height: 32rpx;
  background: #ffffff;
  border-radius: 50%;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.option-switch.active .switch-thumb {
  left: 44rpx;
}

/* 底部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: #ffffff;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.status-item {
  text-align: center;
  flex: 1;
}

.status-label {
  display: block;
  font-size: 22rpx;
  color: #a0aec0;
  margin-bottom: 8rpx;
}

.status-value {
  font-size: 26rpx;
  font-weight: 500;
  color: #2d3748;
}

.status-value.synced {
  color: #48bb78;
}

.status-value.unsynced {
  color: #f56565;
}




