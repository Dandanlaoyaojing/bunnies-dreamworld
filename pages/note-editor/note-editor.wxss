/* pages/note-editor/note-editor.wxss - 简约笔记·智能版 */
.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 0;
  position: relative;
}


/* 顶部区域 */
.header {
  background: rgba(255, 255, 255, 0.95);
  padding: 40rpx 30rpx 30rpx;
  color: #333;
  position: relative;
  border-radius: 12rpx;
  margin: 30rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  backdrop-filter: blur(10rpx);
}



.title-input {
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
  line-height: 80rpx;
  height: 80rpx;
  outline: none;
  cursor: text;
  vertical-align: middle;
  backdrop-filter: blur(10rpx);
}

/* 分类选择区域 */
.category-section {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 30rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  backdrop-filter: blur(10rpx);
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  font-weight: 600;
}

.categories {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
  max-width: 100%;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 8rpx;
  border-radius: 12rpx;
  background: #F9F9F9;
  transition: all 0.3s ease;
  justify-content: center;
  aspect-ratio: 1;
}

.category-item.selected {
  background: #E3F2FD;
  transform: scale(1.05);
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.2;
}

.category-item.selected .category-name {
  color: #007AFF;
  font-weight: 500;
}

/* 核心编辑区 */
.editor-container {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.main-editor {
  width: 100%;
  min-height: 400rpx;
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background: transparent;
  border: none;
  box-sizing: border-box;
}

/* 功能工具栏 */
.toolbar {
  background: transparent;
  margin: 0 30rpx;
  padding: 30rpx;
}

.toolbar-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
}


.tool-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 25rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  min-width: 100rpx;
  border: 1px solid #E5E5E5;
}

.tool-item:active {
  transform: scale(0.95);
}

.image-btn {
  background: #F8F9FA;
}

.image-btn:active {
  background: #E9ECEF;
}

.voice-btn {
  background: #E8F5E8;
}

.voice-btn:active {
  background: #D4EDDA;
}

.save-btn {
  background: #E3F2FD;
}

.save-btn:active {
  background: #BBDEFB;
}

.voice-btn .tool-icon {
  width: 80rpx;
  height: 60rpx;
}


.tool-icon {
  width: 70rpx;
  height: 70rpx;
}



/* 智能标签区 */
.tags-section {
  margin: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 30rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  backdrop-filter: blur(10rpx);
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag {
  background: #E3F2FD;
  color: #007AFF;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tag-remove {
  color: #999;
  font-size: 28rpx;
  cursor: pointer;
}

.add-tag {
  background: #F5F5F5;
  border: 1px dashed #CCC;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  color: #666;
  font-size: 24rpx;
}

.add-tag-text {
  color: inherit;
}

/* 底部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  margin: 0 30rpx 30rpx;
  border-radius: 12rpx;
  border: 1px solid rgba(229, 229, 229, 0.5);
  border-top: 1px solid rgba(240, 240, 240, 0.5);
  backdrop-filter: blur(10rpx);
}

.status-item {
  flex: 1;
  text-align: center;
}

.status-text {
  font-size: 22rpx;
  color: #999;
}

.sync-status.synced {
  color: #4CAF50;
}

.sync-status.unsynced {
  color: #FF9800;
}
