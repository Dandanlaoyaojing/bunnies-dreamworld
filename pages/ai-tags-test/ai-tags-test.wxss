/* AI智能标签测试页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
}

/* 测试控制区 */
.test-controls {
  margin-bottom: 40rpx;
}

.test-btn {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 500;
}

.test-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.test-btn.secondary {
  background-color: #6c757d;
  color: white;
}

.test-btn:not(.primary):not(.secondary) {
  background-color: #007bff;
  color: white;
}

.test-btn[disabled] {
  opacity: 0.6;
}

.btn-text {
  font-size: 28rpx;
}

.individual-tests {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin: 20rpx 0;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  background-color: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #007bff;
}

/* 结果区域 */
.results-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-count {
  font-size: 24rpx;
  color: #666;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.result-info {
  flex: 1;
}

.result-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.result-time {
  font-size: 22rpx;
  color: #666;
  display: block;
}

.result-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.result-status.success {
  background-color: #d4edda;
  color: #155724;
}

.result-status.failed {
  background-color: #f8d7da;
  color: #721c24;
}

.status-text {
  font-size: 22rpx;
  font-weight: 500;
}

.result-content {
  margin-bottom: 15rpx;
}

.result-details {
  margin-bottom: 10rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  display: block;
  margin-bottom: 5rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  display: block;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}

.tag {
  background-color: #e3f2fd;
  color: #1976d2;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  border: 1rpx solid #bbdefb;
}

.error-message {
  font-size: 24rpx;
  color: #dc3545;
  display: block;
  background-color: #f8d7da;
  padding: 10rpx;
  border-radius: 8rpx;
  border: 1rpx solid #f5c6cb;
}

.result-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  padding: 12rpx;
  background-color: #f8f9fa;
  border: 1rpx solid #dee2e6;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #495057;
}

.action-text {
  font-size: 24rpx;
}

/* 规则说明区 */
.rules-section {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
}

.rules-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rule-item {
  padding: 15rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #007bff;
}

.rule-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.rule-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: block;
}
