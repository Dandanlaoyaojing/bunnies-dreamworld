/* pages/1/1.wxss*/
.tips {
  background-color: #ffffff;
  font-size: 36rpx;
  color: #4a5568;
  margin: 25rpx 10rpx 0rpx 10rpx;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tips:active {
  background-color: #f7fafc;
  transform: scale(0.98);
}


.icon {
  padding-right: 10rpx;
  padding-left: 10rpx;
}


.menu{
  display: flex;
  justify-content: space-between;
  padding: 16rpx;
  border-radius: 0rpx;
  flex-wrap: wrap;
}

.item{
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
width: 150rpx;
height: 200rpx;
margin: 1rpx;
border-radius: 15rpx;
transition: all 0.3s ease;
}

.item:active{
transform: scale(0.95);
background-color: rgba(255, 255, 255, 0.1);
}

.img{
width: 88rpx;
height: 88rpx;
border-radius: 10rpx;
}

.title{
margin-top: 12rpx;
font-size: 30rpx;
}
.notice{
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.notice>text{
  flex-grow: 1;
  font-size: 30rpx;
}
.bottom{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.bottom>view>image{
  width: 350rpx;
  padding: 8rpx;
  height: 200rpx;
}