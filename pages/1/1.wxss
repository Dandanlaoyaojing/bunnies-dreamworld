/* pages/1/1.wxss*/

/* 容器 */
.container {
  min-height: 100vh;
  background: #ffffff;
}

/* 导航栏 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left {
  flex: 1;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

/* 导航按钮 */
.nav-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.nav-btn:active {
  transform: scale(0.9);
}

.knowledge-map-nav-btn {
  background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 216, 155, 0.3);
}

.notes-nav-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.nav-btn-icon {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
}

.tips {
  background-color: #ffffff;
  font-size: 36rpx;
  color: #385170;
  margin: 25rpx 10rpx 0rpx 10rpx;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tips:active {
  background-color: #f7fafc;
  transform: scale(0.98);
}


.icon {
  padding-right: 10rpx;
  padding-left: 10rpx;
}


.menu{
  display: flex;
  justify-content: space-between;
  padding: 16rpx;
  border-radius: 0rpx;
  flex-wrap: wrap;
}

.item{
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
width: 150rpx;
height: 200rpx;
margin: 1rpx;
border-radius: 15rpx;
transition: all 0.3s ease;
}

.item:active{
transform: scale(0.95);
background-color: rgba(255, 255, 255, 0.1);
}

.img{
width: 88rpx;
height: 88rpx;
border-radius: 10rpx;
}

.title{
margin-top: 12rpx;
font-size: 30rpx;
}
.notice{
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.notice>text{
  flex-grow: 1;
  font-size: 30rpx;
}
.bottom{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.bottom>view>image{
  width: 350rpx;
  padding: 8rpx;
  height: 200rpx;
}