<!--pages/1/1.wxml-->
<view class="container">
  <!-- 导航栏 -->
  <view class="nav-bar">
    <view class="nav-content">
      <view class="nav-left">
        <text class="nav-title">小兔的梦幻世界</text>
      </view>
      <view class="nav-right">
        <view class="nav-btn api-test-nav-btn" bindtap="goToAPITest" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
          <text class="nav-btn-icon">🔌</text>
        </view>
        <view class="nav-btn draft-box-nav-btn" bindtap="goToDraftBox">
          <text class="nav-btn-icon">📋</text>
        </view>
        <view class="nav-btn knowledge-map-nav-btn" bindtap="goToKnowledgeMap">
          <text class="nav-btn-icon">🌟</text>
        </view>
        <view class="nav-btn notes-nav-btn" bindtap="goToMyNotes">
          <text class="nav-btn-icon">📝</text>
        </view>
      </view>
    </view>
  </view>

  <view class="banner">
  <swiper style="height: 500rpx;" autoplay circular indicator-dots indicator-color="#ffffff" interval="4000">
    <swiper-item>
      <image src="/images/banner/bunnyoncloud.png" style="height: 100%;width: 100%;" />
    </swiper-item>
    <swiper-item>
      <image src="/images/banner/bunnydreams.png" style="height: 100%;width: 100%;" />
    </swiper-item>
    <swiper-item>
      <image src="/images/banner/bunnyplaystars.png" style="height: 100%;width: 100%;" />
    </swiper-item>
  </swiper>
</view>

<view class="tips" bindtap="goToNoteEditor">
  <text class="iconfont icon-xingxing icon star-icon"></text>
  <image src="/images/notice/welcom.png" mode="aspectFit" style="height: 100rpx; max-width: 600rpx; margin-top: -20rpx;"/>
  <text class="iconfont icon-xingxing icon star-icon"></text>
</view>
<view class="menu">
  <view class="item" bindtap="onMenuTap" data-page="art">
    <image src="/images/menu/art.png" class="img" />
    <text class="title">艺术</text>
  </view>
  <view class="item" bindtap="onMenuTap" data-page="cute">
    <image src="/images/menu/cute.png" class="img" />
    <text class="title">萌物</text>
  </view>
  <view class="item" bindtap="onMenuTap" data-page="dreams">
    <image src="/images/menu/dreams.png" class="img" />
    <text class="title">梦游</text>
  </view>
  <view class="item" bindtap="onMenuTap" data-page="foods">
    <image src="/images/menu/foods.png" class="img" />
    <text class="title">美食</text>
  </view>
  <view class="item" bindtap="onMenuTap" data-page="happiness">
    <image src="/images/menu/happiness.png" class="img" />
    <text class="title">趣事</text>
  </view>
  <view class="item" bindtap="onMenuTap" data-page="knowledge">
    <image src="/images/menu/knowledge.png" class="img" />
    <text class="title">知识</text>
  </view>
  <view class="item" bindtap="onMenuTap" data-page="sights">
    <image src="/images/menu/sights.png" class="img" />
    <text class="title">风景</text>
  </view>
  <view class="item" bindtap="onMenuTap" data-page="thinking">
    <image src="/images/menu/thinking.png" class="img" />
    <text class="title">思考</text>
  </view>
</view>
<view class="notice">
<image src="/images/notice/1.png" mode="aspectFit" style="height: 50rpx;width: 100rpx;"/>
<text>通知：这里不可以说脏话哦！</text>
</view>

  <view class="bottom">
    <view>
      <image src="/images/bottom/knowledgestarmap.png" mode="scaleToFill"/>
    </view>
    <view>
      <image src="/images/bottom/dreamkingdom.png" mode="scaleToFill"/>
    </view>
  </view>
</view>