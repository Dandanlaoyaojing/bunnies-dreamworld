/* pages/draft-delete-test/draft-delete-test.wxss */
.test-container {
  padding: 30rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

.test-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.test-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3748;
}

.test-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.draft-count {
  margin-bottom: 20rpx;
}

.count-text {
  font-size: 26rpx;
  color: #4a5568;
}

.draft-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.draft-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 10rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
}

.draft-info {
  flex: 1;
}

.draft-title {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.draft-id {
  font-size: 22rpx;
  color: #718096;
  display: block;
  margin-bottom: 4rpx;
}

.draft-time {
  font-size: 20rpx;
  color: #a0aec0;
  display: block;
}

.delete-btn {
  padding: 12rpx 20rpx;
  background: #fed7d7;
  color: #e53e3e;
  border-radius: 8rpx;
  border: none;
  font-size: 22rpx;
  font-weight: 500;
}

.batch-controls {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.test-btn {
  padding: 16rpx 24rpx;
  background: #DBEAF8;
  color: #2d3748;
  border-radius: 12rpx;
  border: none;
  font-size: 24rpx;
  font-weight: 500;
}

.log-container {
  background: #f7fafc;
  border-radius: 12rpx;
  padding: 20rpx;
  max-height: 300rpx;
  overflow-y: auto;
}

.log-item {
  font-size: 22rpx;
  color: #4a5568;
  line-height: 1.6;
  display: block;
  margin-bottom: 8rpx;
  font-family: monospace;
}
