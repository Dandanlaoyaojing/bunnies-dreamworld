/* 增强版API测试页面样式 */
.test-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  padding: 40rpx 0;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 操作按钮 */
.action-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.test-btn {
  padding: 25rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.test-btn.primary {
  background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
  color: white;
  grid-column: 1 / -1;
}

.test-btn.secondary {
  background: rgba(255,255,255,0.2);
  color: white;
  border: 1rpx solid rgba(255,255,255,0.3);
}

.test-btn.success {
  background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
  color: white;
  grid-column: 1 / -1;
}

.test-btn:disabled {
  opacity: 0.6;
  transform: none;
}

.test-btn:not(:disabled):active {
  transform: scale(0.98);
}

/* 当前测试状态 */
.current-test {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  color: white;
}

.test-icon {
  font-size: 30rpx;
  margin-right: 15rpx;
  animation: spin 1s linear infinite;
}

.test-text {
  font-size: 26rpx;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 测试结果 */
.test-results {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.results-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.results-count {
  font-size: 24rpx;
  color: #6c757d;
}

/* 结果列表 */
.result-list {
  max-height: 800rpx;
  overflow-y: auto;
}

.result-item {
  display: flex;
  align-items: flex-start;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:active {
  background: #f8f9fa;
}

.result-item.success {
  border-left: 4rpx solid #4caf50;
}

.result-item.error {
  border-left: 4rpx solid #f44336;
}

.result-icon {
  font-size: 30rpx;
  margin-right: 20rpx;
  margin-top: 5rpx;
}

.result-content {
  flex: 1;
}

.result-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.result-message {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
}

.result-data {
  font-size: 22rpx;
  color: #999;
}

.data-label {
  font-weight: bold;
}

.data-value {
  word-break: break-all;
}

.result-action {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.action-text {
  font-size: 22rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: white;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: white;
}

.loading-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .action-buttons {
    grid-template-columns: 1fr;
  }
  
  .test-btn.primary,
  .test-btn.success {
    grid-column: 1;
  }
}


