/* pages/quick-backend-fix/quick-backend-fix.wxss */
.fix-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.nav-icon {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.nav-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.nav-right {
  width: 60rpx;
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.refresh-icon {
  color: white;
  font-size: 24rpx;
}

/* 加载状态 */
.loading-section {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-icon {
  font-size: 64rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.loading-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.loading-desc {
  font-size: 26rpx;
  color: #666;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 配置信息 */
.config-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.config-header {
  margin-bottom: 20rpx;
}

.config-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.config-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.config-item {
  display: flex;
  align-items: center;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  border-left: 4rpx solid #667eea;
}

.config-label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.config-value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  flex: 1;
}

/* 修复步骤 */
.steps-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.steps-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.steps-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.steps-count {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.steps-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  padding: 25rpx;
  border-radius: 15rpx;
  border-left: 6rpx solid;
}

.step-item.success {
  background: #f0f9ff;
  border-left-color: #4caf50;
}

.step-item.error {
  background: #fff5f5;
  border-left-color: #f44336;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 20rpx;
  margin-top: 5rpx;
}

.step-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.step-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.step-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.step-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  text-transform: uppercase;
  font-weight: bold;
}

.step-item.success .step-status {
  background: #e8f5e8;
  color: #4caf50;
}

.step-item.error .step-status {
  background: #ffeaea;
  color: #f44336;
}

.step-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.step-actions {
  margin-top: 10rpx;
}

.detail-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.detail-icon {
  font-size: 20rpx;
}

.detail-text {
  font-size: 24rpx;
}

/* 问题说明 */
.problem-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.problem-header {
  margin-bottom: 20rpx;
}

.problem-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.problem-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.problem-item {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
}

.problem-icon {
  font-size: 32rpx;
  margin-top: 5rpx;
}

.problem-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.problem-text .problem-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.problem-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}
