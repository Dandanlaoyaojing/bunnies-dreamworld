/* pages/knowledge-map/knowledge-map.wxss */
.knowledge-map-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 导航栏 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left, .nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 36rpx;
  color: #C0D3E2;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 搜索容器 */
.search-container {
  position: relative;
  margin: 20rpx 30rpx;
}

.search-input-wrapper {
  position: relative;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #4a5568;
  box-sizing: border-box;
}

/* 搜索建议 */
.search-suggestions {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-top: none;
  border-radius: 0 0 16rpx 16rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  max-height: 400rpx;
  overflow-y: auto;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f7fafc;
  transition: background-color 0.3s ease;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background: #f7fafc;
}

.suggestion-icon {
  font-size: 24rpx;
  margin-right: 15rpx;
  color: #a0aec0;
}

.suggestion-text {
  font-size: 26rpx;
  color: #4a5568;
}

/* 快速标签 */
.quick-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 20rpx;
}

.quick-tag {
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.quick-tag:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 筛选控制面板 */
.filter-panel {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
}

.filter-section {
  margin-bottom: 30rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #385170;
  margin-bottom: 20rpx;
}

/* 时间筛选 */
.time-filters {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.picker-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  color: #4a5568;
  transition: all 0.3s ease;
}

.picker-btn:active {
  background: #e2e8f0;
  transform: translateY(2rpx);
}

.picker-text {
  color: #2d3748;
}

.picker-arrow {
  font-size: 20rpx;
  color: #a0aec0;
}

.date-separator {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
  white-space: nowrap;
}

/* 分类筛选 */
.category-filters {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.category-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #718096;
  transition: all 0.3s ease;
  cursor: pointer;
  white-space: nowrap;
  min-width: fit-content;
}

.category-item:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 选中状态的样式 */
.category-item.selected {
  background: #DBEAF8 !important;
  border-color: #DBEAF8 !important;
  box-shadow: 0 4rpx 12rpx rgba(219, 234, 248, 0.3) !important;
  transform: translateY(-2rpx) !important;
}

/* 添加一个更具体的选择器 */
.category-filters .category-item.selected {
  background: #DBEAF8 !important;
  border-color: #DBEAF8 !important;
}

.category-item.selected:active {
  background: #DBEAF8 !important;
  transform: translateY(-2rpx) scale(0.95) !important;
  opacity: 0.9 !important;
}

.category-name {
  font-weight: 500;
}

/* 确保选中状态的分类名称样式 */
.category-item.selected .category-name {
  font-weight: 600 !important;
}

.category-filters .category-item.selected .category-name {
  font-weight: 600 !important;
}

/* 恒星话题输入框 */
.star-topic-input-wrapper {
  margin-top: 20rpx;
}

.star-topic-input {
  width: 100%;
  padding: 24rpx 20rpx;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2d3748;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.star-topic-input:focus {
  border-color: #C0D3E2;
  box-shadow: 0 4rpx 16rpx rgba(192, 211, 226, 0.2);
  outline: none;
}

.star-topic-input::placeholder {
  color: #a0aec0;
  font-size: 26rpx;
}


/* 恒星话题节点特殊样式 */
.node.star-topic {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%) !important;
  border: 3rpx solid #ff6b35 !important;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4) !important;
  animation: starTopicPulse 2s ease-in-out infinite;
}

.node.star-topic .node-name {
  color: #2d3748 !important;
  font-weight: 700 !important;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

@keyframes starTopicPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 12rpx 32rpx rgba(255, 107, 53, 0.6);
  }
}

/* 分析设置 */
.analysis-settings {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.setting-label {
  font-size: 26rpx;
  color: #4a5568;
  min-width: 120rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 30rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e2e8f0;
  border-top: 4rpx solid #C0D3E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #718096;
}

/* 知识星图可视化 */
.map-container {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.map-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.map-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 10rpx;
}

.map-stats {
  font-size: 24rpx;
  color: #718096;
}

/* 图谱可视化 */
.graph-visualization {
  position: relative;
  height: 600rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  overflow: hidden;
}

.knowledge-node {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  cursor: pointer;
  user-select: none;
}

.knowledge-node:active {
  transform: scale(1.05);
}

.knowledge-node.dragging {
  transition: none;
  z-index: 1000;
  transform: scale(1.1);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.2);
}

.knowledge-node.level-1 {
  width: 120rpx;
  height: 120rpx;
  background: rgba(115, 114, 191, 0.3);
}

.knowledge-node.level-2 {
  width: 100rpx;
  height: 100rpx;
  background: rgba(211, 143, 216, 0.3);
}

.knowledge-node.level-3 {
  width: 80rpx;
  height: 80rpx;
  background: rgba(206, 189, 217, 0.3);
}

.knowledge-node.level-4 {
  width: 70rpx;
  height: 70rpx;
  background: rgba(222, 207, 226, 0.3);
}

.node-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 10rpx;
}

.node-title {
  font-size: 20rpx;
  font-weight: 600;
  color: rgba(64, 64, 64, 0.7);
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.node-count {
  font-size: 16rpx;
  color: rgba(64, 64, 64, 0.7);
}

.node-connections {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(255, 20, 147, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ffffff;
}

.connection-count {
  font-size: 18rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 重要性标识 */
.node-importance {
  position: absolute;
  top: -5rpx;
  left: -5rpx;
  width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 20, 147, 0.2);
  border-radius: 50%;
  border: 2rpx solid #ffffff;
}

.importance-star {
  font-size: 16rpx;
  color: rgba(255, 20, 147, 0.2);
}

/* 关联线 */
.connection-lines {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.connection-line {
  position: absolute;
  height: 2rpx;
  background: linear-gradient(90deg, #C0D3E2 0%, rgba(192, 211, 226, 0.3) 100%);
  transform-origin: left center;
  opacity: 0.6;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 30rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #718096;
  display: block;
  margin-bottom: 40rpx;
}

.generate-btn {
  background: #DBEAF8;
  color: #2d3748;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  width: 300rpx;
  box-shadow: 0 8rpx 24rpx rgba(219, 234, 248, 0.3);
}

.generate-btn:active {
  transform: translateY(2rpx);
}

/* 节点详情弹窗 */
.node-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 30rpx;
}

.modal-content {
  background: #ffffff;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.modal-close {
  font-size: 40rpx;
  color: #a0aec0;
  font-weight: bold;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.node-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: block;
  font-size: 26rpx;
  color: #4a5568;
  margin-bottom: 10rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 15rpx;
}

.related-notes {
  margin-bottom: 30rpx;
}

.note-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.note-item:active {
  background: #e2e8f0;
  transform: translateY(2rpx);
}

.note-title {
  font-size: 26rpx;
  color: #2d3748;
  flex: 1;
  margin-right: 15rpx;
}

.note-time {
  font-size: 22rpx;
  color: #a0aec0;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag-item {
  background: #e2e8f0;
  color: #4a5568;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}

/* 浮动设置按钮 */
.floating-settings-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(192, 211, 226, 0.3);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  z-index: 1000;
}

.floating-settings-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.95);
  border-color: rgba(192, 211, 226, 0.5);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.settings-icon {
  font-size: 40rpx;
}
