/* pages/knowledge-map/knowledge-map.wxss */
.knowledge-map-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 导航栏 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left, .nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 36rpx;
  color: #C0D3E2;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.refresh-text {
  font-size: 28rpx;
  color: #C0D3E2;
  font-weight: 500;
}

/* 筛选控制面板 */
.filter-panel {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
}

.filter-section {
  margin-bottom: 30rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #385170;
  margin-bottom: 20rpx;
}

/* 时间筛选 */
.time-filters {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.picker-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  color: #4a5568;
  transition: all 0.3s ease;
}

.picker-btn:active {
  background: #e2e8f0;
  transform: translateY(2rpx);
}

.picker-text {
  color: #2d3748;
}

.picker-arrow {
  font-size: 20rpx;
  color: #a0aec0;
}

.date-separator {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
  white-space: nowrap;
}

/* 分类筛选 */
.category-filters {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.category-item {
  padding: 12rpx 24rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #718096;
  transition: all 0.3s ease;
}

.category-item.active {
  background: linear-gradient(135deg, #C0D3E2 0%, #C0D3E2 100%);
  color: #ffffff;
  border-color: #C0D3E2;
  box-shadow: 0 4rpx 12rpx rgba(192, 211, 226, 0.3);
}

.category-name {
  font-weight: 500;
}

/* 分析设置 */
.analysis-settings {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.setting-label {
  font-size: 26rpx;
  color: #4a5568;
  min-width: 120rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 30rpx;
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e2e8f0;
  border-top: 4rpx solid #C0D3E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #718096;
}

/* 知识星图可视化 */
.map-container {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.map-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.map-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 10rpx;
}

.map-stats {
  font-size: 24rpx;
  color: #718096;
}

/* 图谱可视化 */
.graph-visualization {
  position: relative;
  height: 600rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  overflow: hidden;
}

.knowledge-node {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  cursor: pointer;
}

.knowledge-node:active {
  transform: scale(1.1);
}

.knowledge-node.level-1 {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.knowledge-node.level-2 {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.knowledge-node.level-3 {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.node-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 10rpx;
}

.node-title {
  font-size: 20rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.node-count {
  font-size: 16rpx;
  color: rgba(255, 255, 255, 0.8);
}

.node-connections {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff6b6b;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ffffff;
}

.connection-count {
  font-size: 18rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 关联线 */
.connection-lines {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.connection-line {
  position: absolute;
  height: 2rpx;
  background: linear-gradient(90deg, #C0D3E2 0%, rgba(192, 211, 226, 0.3) 100%);
  transform-origin: left center;
  opacity: 0.6;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 30rpx;
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #718096;
  display: block;
  margin-bottom: 40rpx;
}

.generate-btn {
  background: linear-gradient(135deg, #C0D3E2 0%, #C0D3E2 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  width: 300rpx;
  box-shadow: 0 8rpx 24rpx rgba(192, 211, 226, 0.3);
}

.generate-btn:active {
  transform: translateY(2rpx);
}

/* 节点详情弹窗 */
.node-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 30rpx;
}

.modal-content {
  background: #ffffff;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.modal-close {
  font-size: 40rpx;
  color: #a0aec0;
  font-weight: bold;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.node-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: block;
  font-size: 26rpx;
  color: #4a5568;
  margin-bottom: 10rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 15rpx;
}

.related-notes {
  margin-bottom: 30rpx;
}

.note-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.note-item:active {
  background: #e2e8f0;
  transform: translateY(2rpx);
}

.note-title {
  font-size: 26rpx;
  color: #2d3748;
  flex: 1;
  margin-right: 15rpx;
}

.note-time {
  font-size: 22rpx;
  color: #a0aec0;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag-item {
  background: #e2e8f0;
  color: #4a5568;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}

/* 浮动操作按钮 */
.floating-actions {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 150;
}

.floating-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.floating-btn:active {
  transform: scale(0.95);
}

.floating-btn.generate-btn {
  background: linear-gradient(135deg, #C0D3E2 0%, #C0D3E2 100%);
}

.floating-btn.settings-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.floating-icon {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
}
