/* pages/2/2.wxss */

/* 页面容器 */
.my-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-section {
  padding: 40rpx 30rpx 20rpx;
}

.user-card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  padding: 40rpx;
  display: flex;
  align-items: center;
}

.user-avatar {
  position: relative;
  margin-right: 30rpx;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #EA4C89;
}

.avatar-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #EA4C89 0%, #f56565 100%);
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  border: 3rpx solid #ffffff;
}

.badge-text {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
}

.user-info {
  flex: 1;
}

.username {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 8rpx;
}

.user-desc {
  display: block;
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 20rpx;
}

.user-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #EA4C89;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #718096;
}

.user-actions {
  margin-left: 20rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f7fafc;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #EA4C89;
  transform: scale(0.95);
}

.action-icon {
  font-size: 28rpx;
}

/* 登录提示 */
.login-prompt {
  padding: 40rpx 30rpx;
}

.prompt-content {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  padding: 60rpx 40rpx;
  text-align: center;
}

.prompt-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 30rpx;
}

.prompt-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 16rpx;
}

.prompt-desc {
  display: block;
  font-size: 26rpx;
  color: #718096;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.login-btn {
  width: 200rpx;
  height: 70rpx;
  background: linear-gradient(135deg, #EA4C89 0%, #f56565 100%);
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
}

/* 功能菜单 */
.menu-section {
  padding: 0 30rpx 20rpx;
}

.menu-card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.menu-header {
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f7fafc;
}

.menu-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

.menu-list {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f7fafc;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f7fafc;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 24rpx;
}

.menu-icon-img {
  width: 40rpx;
  height: 40rpx;
}

.notes-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.knowledge-map-icon {
  background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
}

.favorites-icon {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.drafts-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.trash-icon {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.menu-content {
  flex: 1;
}

.menu-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2d3748;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #718096;
}

.menu-badge {
  background: #EA4C89;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  margin-right: 16rpx;
}

.badge-count {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
}

.menu-arrow {
  font-size: 24rpx;
  color: #a0aec0;
  font-weight: bold;
}

/* 工具菜单 */
.tools-section {
  padding: 0 30rpx 20rpx;
}

.tools-card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.tools-header {
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f7fafc;
}

.tools-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

.tools-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0;
  padding: 20rpx 0;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  transition: background-color 0.3s ease;
}

.tool-item:active {
  background-color: #f7fafc;
}

.tool-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.account-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.settings-icon {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.backup-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.theme-icon {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.help-icon {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.feedback-icon {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.tool-name {
  font-size: 24rpx;
  color: #4a5568;
  text-align: center;
}

/* 应用信息 */
.app-info {
  padding: 0 30rpx 20rpx;
}

.info-card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  padding: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.app-logo {
  margin-right: 30rpx;
}

.logo-text {
  font-size: 60rpx;
}

.app-details {
  flex: 1;
}

.app-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 8rpx;
}

.app-version {
  display: block;
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 8rpx;
}

.app-desc {
  font-size: 22rpx;
  color: #a0aec0;
}

.app-actions {
  display: flex;
  gap: 20rpx;
}

.app-btn {
  flex: 1;
  height: 60rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #4a5568;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.app-btn.secondary {
  background: #EA4C89;
  border-color: #EA4C89;
  color: #ffffff;
}

.app-btn:active {
  transform: translateY(2rpx);
}

/* 订阅管理 */
.subscription-section {
  padding: 0 30rpx 20rpx;
}

.subscription-card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f7fafc;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.subscription-info {
  padding: 30rpx 40rpx;
}

.subscription-item {
  display: flex;
  align-items: center;
}

.subscription-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #EA4C89 0%, #f56565 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 24rpx;
}

.subscription-content {
  flex: 1;
}

.subscription-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2d3748;
  margin-bottom: 6rpx;
}

.subscription-desc {
  font-size: 24rpx;
  color: #718096;
}

.subscription-status {
  margin-left: 20rpx;
}

.status-text.active {
  color: #48bb78;
}

.status-text.inactive {
  color: #a0aec0;
}

.subscription-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 40rpx 30rpx;
}

.subscription-btn {
  flex: 1;
  height: 70rpx;
  background: linear-gradient(135deg, #EA4C89 0%, #f56565 100%);
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.subscription-btn.secondary {
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  color: #4a5568;
}

.subscription-btn:active {
  transform: translateY(2rpx);
}

/* 快捷入口 */
.quick-access-section {
  padding: 0 30rpx 20rpx;
}

.quick-card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.quick-header {
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f7fafc;
}

.quick-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

.quick-list {
  display: flex;
  padding: 40rpx 30rpx;
  gap: 40rpx;
  justify-content: space-around;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  transition: all 0.3s ease;
}

.quick-item:active {
  transform: translateY(-4rpx);
}

.quick-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.quick-item:active .quick-icon-wrapper {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.account-color {
  background: #DBEAF8;
}

.help-color {
  background: rgba(192, 211, 226, 0.3);
}

.about-color {
  background: rgba(219, 234, 248, 0.5);
}

.quick-icon {
  font-size: 36rpx;
}

.quick-name {
  font-size: 24rpx;
  color: #4a5568;
  text-align: center;
  font-weight: 500;
}

/* 退出登录 */
.logout-section {
  padding: 0 30rpx 40rpx;
}

.logout-btn {
  width: 100%;
  height: 80rpx;
  background: #ffffff;
  border: 2rpx solid rgba(229, 62, 62, 0.3);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #e53e3e;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.logout-btn:active {
  background: rgba(229, 62, 62, 0.1);
  border-color: #e53e3e;
}
