/* pages/star-cluster/star-cluster.wxss */
.star-cluster-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 导航栏 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left, .nav-right {
  width: 80rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.nav-left:active, .nav-right:active {
  background: rgba(219, 234, 248, 0.2);
  transform: scale(0.95);
}

.nav-icon {
  font-size: 36rpx;
  color: #2d3748;
  font-weight: bold;
  pointer-events: none;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 通用样式 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 30rpx 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 星团列表区域 */
.cluster-list-section {
  padding-top: 20rpx;
}

.add-cluster-btn {
  padding: 12rpx 20rpx;
  background: #DBEAF8;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.add-cluster-btn:active {
  background: rgba(219, 234, 248, 0.8);
  transform: scale(0.95);
}

.add-btn-text {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 500;
}

.cluster-list {
  padding: 0 30rpx;
}

.cluster-item {
  background: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.cluster-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.cluster-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.cluster-info {
  flex: 1;
}

.cluster-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 4rpx;
  display: block;
}

.cluster-desc {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.4;
}

.cluster-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-text {
  font-size: 24rpx;
  color: #718096;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.status-dot.active {
  background: #48bb78;
}

.status-dot.inactive {
  background: #a0aec0;
}

.cluster-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
  border-top: 1rpx solid rgba(192, 211, 226, 0.3);
  border-bottom: 1rpx solid rgba(192, 211, 226, 0.3);
}

.meta-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.meta-label {
  font-size: 22rpx;
  color: #718096;
}

.meta-value {
  font-size: 24rpx;
  color: #2d3748;
  font-weight: 500;
}

.cluster-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  padding: 16rpx 24rpx;
  background: #DBEAF8;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: #DBEAF8;
}

.action-btn.secondary {
  background: rgba(219, 234, 248, 0.3);
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.disabled {
  background: #e2e8f0;
  color: #a0aec0;
}

.action-text {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 500;
}

.action-btn.disabled .action-text {
  color: #a0aec0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 30rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #718096;
  margin-bottom: 40rpx;
  display: block;
  line-height: 1.5;
}

.empty-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

/* 星团详情页面 */
.cluster-detail-section {
  padding-top: 20rpx;
}

.cluster-detail-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-center {
  text-align: center;
}

/* 成员区域 */
.members-section {
  background: rgba(255, 255, 255, 0.9);
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.invite-btn {
  padding: 12rpx 20rpx;
  background: #DBEAF8;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.invite-btn:active {
  background: rgba(219, 234, 248, 0.8);
  transform: scale(0.95);
}

.invite-text {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 500;
}

.members-list {
  padding: 0 30rpx 24rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(192, 211, 226, 0.3);
}

.member-item:last-child {
  border-bottom: none;
}

.member-item.leader {
  background: rgba(219, 234, 248, 0.1);
  margin: 0 -30rpx 16rpx;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
}

.member-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  background: #DBEAF8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.member-initial {
  font-size: 32rpx;
  color: #2d3748;
  font-weight: 600;
}

.leader-badge {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  background: #ffd700;
  color: #2d3748;
  font-size: 16rpx;
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.online-indicator {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 16rpx;
  height: 16rpx;
  background: #48bb78;
  border: 2rpx solid #ffffff;
  border-radius: 50%;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 4rpx;
  display: block;
}

.member-role {
  font-size: 24rpx;
  color: #4a5568;
  margin-bottom: 2rpx;
  display: block;
}

.member-status {
  font-size: 22rpx;
  color: #718096;
}

.member-actions {
  display: flex;
  align-items: center;
}

.action-btn.small {
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 157, 0.1);
  border-radius: 8rpx;
}

.action-btn.small .action-text {
  font-size: 20rpx;
  color: #ff6b9d;
}

/* 成员网格布局 */
.members-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: flex-start;
}

.member-card {
  flex: 1;
  min-width: 140rpx;
  max-width: 160rpx;
  padding: 12rpx 8rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
  border: 2rpx solid rgba(219, 234, 248, 0.3);
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100rpx;
}

.member-card:active {
  transform: scale(0.95);
  border-color: #DBEAF8;
}

.member-avatar-small {
  position: relative;
  width: 50rpx;
  height: 50rpx;
  background: #DBEAF8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  flex-shrink: 0;
}

.member-avatar-small .member-initial {
  font-size: 20rpx;
  color: #2d3748;
  font-weight: 600;
}

.member-avatar-small .online-indicator {
  position: absolute;
  bottom: 2rpx;
  right: 2rpx;
  width: 12rpx;
  height: 12rpx;
  background: #48bb78;
  border: 2rpx solid #ffffff;
  border-radius: 50%;
}

.member-info-compact {
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.member-info-compact .member-name {
  font-size: 22rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 2rpx;
  display: block;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
}

.member-status-text {
  font-size: 18rpx;
  color: #718096;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
}

.member-actions-compact {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
}

.remove-btn {
  width: 24rpx;
  height: 24rpx;
  background: rgba(255, 107, 157, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.remove-btn:active {
  background: rgba(255, 107, 157, 0.4);
  transform: scale(0.9);
}

.remove-text {
  font-size: 16rpx;
  color: #ff6b9d;
  font-weight: bold;
}

/* 星图融合区域 */
.fusion-section {
  background: rgba(255, 255, 255, 0.9);
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.fusion-status {
  padding: 8rpx 16rpx;
  background: rgba(219, 234, 248, 0.3);
  border-radius: 12rpx;
}

.my-stars-selection {
  padding: 0 30rpx 24rpx;
}

.selection-header {
  margin-bottom: 20rpx;
}

.selection-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 8rpx;
  display: block;
}

.selection-desc {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.4;
}

/* 可滑动的星图列表 */
.stars-scroll-container {
  position: relative;
}

.my-stars-scroll {
  width: 100%;
  white-space: nowrap;
}

.my-stars-list {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 0 4rpx;
}

/* 滑动提示 */
.scroll-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 12rpx;
  padding: 8rpx 0;
}

.scroll-dots {
  display: flex;
  gap: 8rpx;
  margin-bottom: 6rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: rgba(192, 211, 226, 0.4);
  transition: all 0.3s ease;
}

.dot.active {
  background: #DBEAF8;
  transform: scale(1.2);
}

.scroll-text {
  font-size: 18rpx;
  color: #a0aec0;
  text-align: center;
}

.member-stars-item {
  padding: 20rpx;
  background: rgba(219, 234, 248, 0.1);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.member-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.member-avatar-small {
  width: 60rpx;
  height: 60rpx;
  background: #DBEAF8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.member-details {
  flex: 1;
}

.star-count {
  font-size: 20rpx;
  color: #718096;
}

.selection-status {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.selection-status .status-text {
  font-size: 20rpx;
  color: #48bb78;
  font-weight: 500;
}

.selection-status .status-text.pending {
  color: #f56565;
}

.star-selector {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.star-option {
  flex-shrink: 0;
  width: 280rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.star-option:active {
  border-color: #DBEAF8;
  background: rgba(219, 234, 248, 0.2);
  transform: scale(0.98);
}

.star-preview {
  margin-bottom: 8rpx;
}

.star-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 4rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.star-nodes {
  font-size: 22rpx;
  color: #718096;
}

.star-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
  margin-bottom: 8rpx;
  max-height: 60rpx;
  overflow: hidden;
}

.tag {
  font-size: 18rpx;
  color: #4a5568;
  background: rgba(192, 211, 226, 0.2);
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  white-space: nowrap;
}

.selected-star {
  padding: 16rpx;
  background: rgba(219, 234, 248, 0.3);
  border-radius: 8rpx;
  border: 2rpx solid #DBEAF8;
  position: relative;
}

.change-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  padding: 4rpx 8rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 6rpx;
}

.change-text {
  font-size: 18rpx;
  color: #4a5568;
}

.fusion-controls {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid rgba(192, 211, 226, 0.3);
}

.control-info {
  margin-bottom: 16rpx;
  text-align: center;
}

.info-text {
  font-size: 24rpx;
  color: #4a5568;
}

.control-actions {
  display: flex;
  gap: 12rpx;
}

/* 融合历史 */
.fusion-history {
  background: rgba(255, 255, 255, 0.9);
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.history-list {
  padding: 0 30rpx 24rpx;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(192, 211, 226, 0.3);
}

.history-item:last-child {
  border-bottom: none;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.history-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
}

.history-time {
  font-size: 20rpx;
  color: #718096;
}

.history-stats {
  display: flex;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.history-stats .stat-item {
  font-size: 20rpx;
  color: #4a5568;
}

.history-actions {
  display: flex;
  justify-content: flex-end;
}

/* 星图元信息 */
.star-meta {
  margin-top: 8rpx;
  padding-top: 8rpx;
  border-top: 1rpx solid rgba(192, 211, 226, 0.3);
}

.star-date {
  font-size: 18rpx;
  color: #a0aec0;
}

.selected-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.selected-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 融合状态 */
.fusion-status {
  margin: 20rpx 0;
  padding: 16rpx 20rpx;
  background: rgba(219, 234, 248, 0.1);
  border-radius: 12rpx;
  border: 2rpx solid rgba(219, 234, 248, 0.3);
}

.status-header {
  margin-bottom: 12rpx;
}

.status-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
}

.status-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-label {
  font-size: 22rpx;
  color: #4a5568;
}

.status-value {
  font-size: 22rpx;
  color: #48bb78;
  font-weight: 500;
}

.status-value.pending {
  color: #f56565;
}

/* 参与融合的成员 */
.participating-members {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(192, 211, 226, 0.3);
}

.members-title {
  font-size: 22rpx;
  color: #4a5568;
  margin-bottom: 8rpx;
  display: block;
}

.members-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.member-tag {
  font-size: 20rpx;
  color: #2d3748;
  background: rgba(219, 234, 248, 0.3);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(219, 234, 248, 0.5);
}

/* 弹窗样式 */
.create-cluster-modal, .fusion-result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 30rpx;
}

.modal-content {
  background: #ffffff;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.modal-close {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(192, 211, 226, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 24rpx;
  color: #4a5568;
  font-weight: bold;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 8rpx;
  display: block;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 16rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #2d3748;
  box-sizing: border-box;
}

.form-input:focus, .form-textarea:focus {
  border-color: #DBEAF8;
  outline: none;
}

.form-textarea {
  min-height: 120rpx;
  resize: none;
}

.radio-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx;
  background: #f7fafc;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.radio-item:active {
  background: rgba(219, 234, 248, 0.2);
}

.radio-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.radio-dot.checked {
  border-color: #DBEAF8;
  background: #DBEAF8;
}

.radio-text {
  font-size: 24rpx;
  color: #2d3748;
}

.modal-actions {
  display: flex;
  gap: 12rpx;
  padding: 30rpx;
  border-top: 1rpx solid #e2e8f0;
}

.result-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: rgba(219, 234, 248, 0.1);
  border-radius: 12rpx;
}

.result-stats .stat-item {
  text-align: center;
