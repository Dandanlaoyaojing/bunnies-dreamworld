/* pages/account-save/account-save.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.header-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}

.header-title {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
}

.header-right {
  width: 60rpx;
}

/* 通用区域样式 */
.account-section,
.account-info-section,
.save-mode-section,
.category-section,
.notes-section {
  margin: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 账户选择区域 */
.account-list {
  margin-bottom: 20rpx;
}

.account-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 10rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.account-item.selected {
  background: #e3f2fd;
  border-color: #2196f3;
}

.account-info {
  flex: 1;
}

.account-name {
  display: block;
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.account-details {
  font-size: 22rpx;
  color: #666666;
}

.account-status {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4caf50;
  border-radius: 50%;
}

.status-icon {
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
}

.create-account {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  border: 2rpx dashed #cccccc;
  transition: all 0.3s ease;
}

.create-account:active {
  background: #e0e0e0;
}

.create-icon {
  font-size: 24rpx;
  color: #666666;
  margin-right: 10rpx;
}

.create-text {
  font-size: 24rpx;
  color: #666666;
}

/* 账户信息 */
.info-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 24rpx;
  color: #666666;
  width: 140rpx;
}

.info-value {
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
  flex: 1;
}

/* 保存模式选择 */
.mode-options {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.mode-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.mode-item.active {
  background: #e3f2fd;
  border-color: #2196f3;
}

.mode-icon {
  font-size: 24rpx;
  margin-right: 15rpx;
}

.mode-text {
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
  flex: 1;
}

.mode-count {
  font-size: 22rpx;
  color: #666666;
}

/* 分类选择 */
.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.category-item {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.category-item.selected {
  background: #e3f2fd;
  border-color: #2196f3;
}

.category-name {
  font-size: 24rpx;
  color: #333333;
  margin-right: 10rpx;
}

.category-count {
  font-size: 20rpx;
  color: #666666;
}

/* 笔记列表 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.select-all {
  padding: 10rpx 20rpx;
  background: #2196f3;
  border-radius: 20rpx;
}

.select-text {
  font-size: 22rpx;
  color: #ffffff;
}

.notes-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.note-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  margin-bottom: 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.note-item.selected {
  background: #e3f2fd;
  border-color: #2196f3;
}

.note-checkbox {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border: 2rpx solid #cccccc;
  border-radius: 8rpx;
  margin-right: 15rpx;
  margin-top: 5rpx;
}

.note-item.selected .note-checkbox {
  background: #2196f3;
  border-color: #2196f3;
}

.checkbox-icon {
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
}

.note-content {
  flex: 1;
}

.note-title {
  display: block;
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.note-preview {
  display: block;
  font-size: 22rpx;
  color: #666666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.note-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.note-category {
  font-size: 20rpx;
  color: #2196f3;
  background: rgba(33, 150, 243, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.note-time {
  font-size: 20rpx;
  color: #999999;
}

/* 操作按钮 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 20rpx 30rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.action-buttons {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 26rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: #2196f3;
  color: #ffffff;
}

.action-btn.primary:active {
  background: #1976d2;
}

.action-btn.secondary {
  background: #4caf50;
  color: #ffffff;
}

.action-btn.secondary:active {
  background: #388e3c;
}

.action-btn.danger {
  background: #f44336;
  color: #ffffff;
}

.action-btn.danger:active {
  background: #d32f2f;
}

.action-btn[disabled] {
  background: #cccccc;
  color: #999999;
}

.btn-text {
  font-size: 26rpx;
}

/* 加载覆盖层 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  min-width: 300rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #2196f3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: #2196f3;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #666666;
}
