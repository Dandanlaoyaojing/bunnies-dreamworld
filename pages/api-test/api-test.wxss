/* pages/api-test/api-test.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
  display: block;
  margin-bottom: 20rpx;
}

.status {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.status-label {
  font-size: 28rpx;
  color: #606266;
  margin-right: 16rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
}

.test-section,
.action-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #EBEEF5;
}

.test-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.test-btn:active {
  opacity: 0.8;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.action-btn.primary {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(245, 87, 108, 0.3);
}

.action-btn.secondary {
  background: #f0f2f5;
  color: #606266;
  flex: 1;
}

.btn-group {
  display: flex;
  gap: 16rpx;
}

.log-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.log-container {
  height: 600rpx;
  background: #2d2d2d;
  border-radius: 12rpx;
  padding: 20rpx;
}

.log-item {
  font-size: 24rpx;
  color: #00ff00;
  line-height: 40rpx;
  font-family: 'Courier New', monospace;
  word-break: break-all;
  margin-bottom: 8rpx;
}

.log-empty {
  text-align: center;
  color: #909399;
  font-size: 28rpx;
  padding: 100rpx 0;
}

.tips {
  background: #fff3cd;
  border: 2rpx solid #ffc107;
  border-radius: 12rpx;
  padding: 24rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #856404;
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

