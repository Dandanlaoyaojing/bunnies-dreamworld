/* API集成测试页面样式 */
.test-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 40rpx 0;
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: #666;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 测试结果 */
.test-results {
  margin-bottom: 20rpx;
}

.test-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-left: 8rpx solid #e0e0e0;
}

.test-item.success {
  border-left-color: #34c759;
}

.test-item.error {
  border-left-color: #ff3b30;
}

.test-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.test-status {
  display: flex;
  align-items: center;
}

.status-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.status-icon.success {
  color: #34c759;
}

.status-icon.error {
  color: #ff3b30;
}

.test-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.test-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  font-size: 24rpx;
  color: #007aff;
  padding: 10rpx 20rpx;
  background-color: #f0f8ff;
  border-radius: 8rpx;
  border: none;
}

.test-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.test-details {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.details-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.details-content {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 25rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
}

.retry-btn {
  background-color: #007aff;
  color: white;
}

.copy-btn {
  background-color: #f8f9fa;
  color: #333;
}

.btn-icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 测试总结 */
.test-summary {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.summary-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-number.success {
  color: #34c759;
}

.stat-number.error {
  color: #ff3b30;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}
