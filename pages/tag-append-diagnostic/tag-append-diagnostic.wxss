/* pages/tag-append-diagnostic/tag-append-diagnostic.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.status-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.status-content {
  background-color: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.status-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.value.success {
  color: #28a745;
  font-weight: bold;
}

.value.error {
  color: #dc3545;
  font-weight: bold;
}

.test-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.test-content {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background-color: #fafafa;
}

.tags-input {
  width: 100%;
  padding: 15rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: #fafafa;
}

.category-value {
  font-size: 28rpx;
  color: #666;
  padding: 15rpx;
  background-color: #f8f9fa;
  border-radius: 10rpx;
  display: inline-block;
}

.button-section {
  margin-bottom: 30rpx;
}

.test-btn {
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
  margin-bottom: 15rpx;
}

.test-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  width: 100%;
}

.test-btn.secondary {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.test-btn:active {
  transform: scale(0.98);
}

.button-row {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.button-row .test-btn {
  flex: 1;
  min-width: 150rpx;
  margin-bottom: 0;
}

.loading-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  text-align: center;
}

.loading-content {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  padding: 20rpx;
  border-radius: 15rpx;
}

.loading-text {
  font-size: 28rpx;
  font-weight: bold;
}

.results-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.copy-btn, .clear-btn {
  margin-left: 10rpx;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
}

.copy-btn {
  background-color: #28a745;
  color: white;
}

.clear-btn {
  background-color: #dc3545;
  color: white;
}

.results-content {
  margin-top: 20rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.result-item {
  background-color: #f8f9fa;
  border-radius: 10rpx;
  padding: 15rpx;
  margin-bottom: 10rpx;
  border-left: 6rpx solid #007bff;
}

.result-time {
  font-size: 24rpx;
  color: #6c757d;
  font-weight: bold;
  margin-right: 10rpx;
}

.result-message {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
}

.help-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.help-content {
  margin-top: 20rpx;
}

.help-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
  position: relative;
}

.help-text::before {
  content: "â€¢";
  color: #007bff;
  font-weight: bold;
  position: absolute;
  left: 0;
}
