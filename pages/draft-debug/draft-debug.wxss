/* 草稿调试页面样式 */
.debug-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.debug-header {
  text-align: center;
  padding: 40rpx 0;
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.debug-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.info-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-content {
  font-size: 24rpx;
  color: #666;
}

.info-text {
  display: block;
  margin-bottom: 10rpx;
}

.empty-state {
  text-align: center;
  padding: 40rpx 0;
}

.empty-text {
  color: #999;
  font-size: 24rpx;
}

.drafts-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.draft-item {
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
}

.draft-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.draft-id {
  font-weight: bold;
  color: #007aff;
}

.draft-title {
  color: #333;
}

.draft-content {
  color: #666;
  word-break: break-all;
}

.draft-category {
  color: #999;
}

.keys-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.key-item {
  background-color: #e0e0e0;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 25rpx;
  font-size: 28rpx;
}
