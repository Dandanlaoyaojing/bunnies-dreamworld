/* pages/favorites/favorites.wxss */

.favorites-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 120rpx;
}

/* 顶部导航 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left, .nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 36rpx;
  color: #C0D3E2;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 分类标签栏 */
.category-tabs {
  display: flex;
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #DBEAF8;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 4rpx;
}

.tab-item.active .tab-text {
  color: #2d3748;
  font-weight: 600;
}

.tab-count {
  font-size: 20rpx;
  color: #a0aec0;
  background: #f7fafc;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.tab-item.active .tab-count {
  background: #C0D3E2;
  color: #2d3748;
}

/* 搜索和筛选栏 */
.search-filter-bar {
  display: flex;
  align-items: center;
  margin: 20rpx 30rpx;
  gap: 20rpx;
}

.search-container {
  flex: 1;
  position: relative;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: #ffffff;
  border-radius: 40rpx;
  padding: 0 60rpx 0 30rpx;
  font-size: 28rpx;
  color: #2d3748;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #C0D3E2;
}

.filter-container {
  display: flex;
  gap: 15rpx;
}

.filter-btn, .view-mode-btn {
  height: 80rpx;
  background: #ffffff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.filter-btn:active, .view-mode-btn:active {
  transform: scale(0.95);
}

.filter-text {
  font-size: 26rpx;
  color: #2d3748;
  margin-right: 8rpx;
}

.filter-arrow {
  font-size: 20rpx;
  color: #C0D3E2;
}

.view-mode-icon {
  font-size: 28rpx;
  color: #C0D3E2;
}

/* 统计信息卡片 */
.stats-card {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.stats-header {
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 8rpx;
}

.stats-subtitle {
  font-size: 24rpx;
  color: #718096;
}

.stats-content {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #C0D3E2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #718096;
}

/* 收藏内容区域 */
.favorites-content {
  margin: 20rpx 30rpx;
}

.favorites-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

.section-count {
  font-size: 22rpx;
  color: #718096;
  background: #f7fafc;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* 笔记列表样式 */
.notes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.note-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
}

.note-item:active {
  transform: scale(0.98);
}

.note-content {
  flex: 1;
}

.note-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.note-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  flex: 1;
  margin-right: 20rpx;
}

.note-category {
  font-size: 20rpx;
  color: #C0D3E2;
  background: #DBEAF8;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.note-preview {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.note-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.note-time, .note-words {
  font-size: 20rpx;
  color: #a0aec0;
}

.note-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f7fafc;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: #DBEAF8;
}

.action-icon {
  font-size: 24rpx;
}

/* 网格视图样式 */
.notes-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.note-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.note-card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.card-category {
  font-size: 20rpx;
  color: #C0D3E2;
  background: #DBEAF8;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.card-actions {
  display: flex;
  gap: 10rpx;
}

.card-action {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #f7fafc;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-preview {
  font-size: 22rpx;
  color: #718096;
  line-height: 1.4;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-time, .card-words {
  font-size: 18rpx;
  color: #a0aec0;
}

/* 知识星图样式 */
.knowledge-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.knowledge-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
}

.knowledge-item:active {
  transform: scale(0.98);
}

.knowledge-preview {
  flex: 1;
}

.preview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.preview-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  flex: 1;
  margin-right: 20rpx;
}

.preview-nodes {
  font-size: 20rpx;
  color: #C0D3E2;
  background: #DBEAF8;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.preview-stats {
  display: flex;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.preview-stats .stat-item {
  font-size: 20rpx;
  color: #718096;
}

.preview-time {
  font-size: 20rpx;
  color: #a0aec0;
}

.knowledge-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

/* 梦境样式 */
.dreams-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.dream-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
}

.dream-item:active {
  transform: scale(0.98);
}

.dream-content {
  flex: 1;
}

.dream-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 12rpx;
}

.dream-type, .dream-style {
  font-size: 20rpx;
  color: #C0D3E2;
  background: #DBEAF8;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.dream-preview {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.dream-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.dream-time, .dream-length {
  font-size: 20rpx;
  color: #a0aec0;
}

.dream-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: #DBEAF8;
  color: #2d3748;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: 600;
}

/* 批量操作栏 */
.batch-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1000;
}

.batch-info {
  flex: 1;
}

.batch-text {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 600;
}

.batch-buttons {
  display: flex;
  gap: 20rpx;
}

.batch-btn {
  padding: 20rpx 30rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
}

.cancel-btn {
  background: #f7fafc;
  color: #718096;
}

.delete-btn {
  background: #fed7d7;
  color: #c53030;
}

/* 浮动操作按钮 */
.floating-actions {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 999;
}

.floating-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #DBEAF8;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.floating-btn:active {
  transform: scale(0.9);
}

.floating-icon {
  font-size: 36rpx;
  color: #2d3748;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .notes-grid {
    grid-template-columns: 1fr;
  }
  
  .stats-content {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .category-tabs {
    flex-wrap: wrap;
  }
  
  .tab-item {
    flex: 1 1 50%;
  }
}