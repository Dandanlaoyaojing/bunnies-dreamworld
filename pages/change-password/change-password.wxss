/* pages/change-password/change-password.wxss - 修改密码页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 20rpx;
  color: white;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.placeholder {
  width: 60rpx;
}

/* 内容区域 */
.content {
  padding: 0 40rpx;
}

.form-container {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.form-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

/* 输入框 */
.input-group {
  margin-bottom: 30rpx;
}

.input-container {
  display: flex;
  align-items: center;
  padding: 25rpx 20rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.input-container.focused {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #a0aec0;
}

.auth-input {
  flex: 1;
  font-size: 30rpx;
  color: #2d3748;
  background: transparent;
  border: none;
  outline: none;
}

.auth-input::placeholder {
  color: #a0aec0;
}

.password-toggle {
  padding: 10rpx;
  cursor: pointer;
}

.toggle-icon {
  font-size: 28rpx;
  color: #a0aec0;
}

.input-error {
  display: block;
  font-size: 24rpx;
  color: #e53e3e;
  margin-top: 12rpx;
  margin-left: 24rpx;
}

/* 密码要求提示 */
.password-tips {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.tips-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.tips-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 5rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(102, 126, 234, 0.3);
  color: rgba(102, 126, 234, 0.6);
}

.submit-btn.active {
  background: #667eea;
  color: white;
}

.submit-btn.active:active {
  transform: scale(0.98);
}
