/* pages/draft-box/draft-box.wxss */

/* 全局样式重置 */
page {
  margin: 0 !important;
  padding: 0 !important;
  width: 100% !important;
  box-sizing: border-box !important;
  overflow-x: hidden;
}

.draft-box-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 120rpx;
  box-sizing: border-box;
  width: 100% !important;
  margin: 0 !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
  position: relative;
  left: 0;
  right: 0;
}

/* 顶部导航 */
.nav-bar {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100% !important;
  box-sizing: border-box;
  margin: 0 !important;
  padding: 0 !important;
  left: 0;
  right: 0;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
  width: 100% !important;
  box-sizing: border-box;
  margin: 0 !important;
  position: relative;
  left: 0;
  right: 0;
}

.nav-left, .nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 36rpx;
  color: #C0D3E2;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 梦境统计卡片 */
.dream-stats-card {
  margin: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  width: calc(100% - 60rpx);
  box-sizing: border-box;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

.stats-badge {
  display: flex;
  align-items: baseline;
  background: #DBEAF8;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(219, 234, 248, 0.3);
}

.stats-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3748;
  margin-right: 4rpx;
}

.stats-unit {
  font-size: 20rpx;
  color: #4a5568;
}

.stats-content {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-info {
  flex: 1;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #718096;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 24rpx;
  color: #2d3748;
  font-weight: 500;
}

/* 梦境搜索与筛选 */
.dream-search-section {
  margin: 0 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  width: calc(100% - 60rpx);
  box-sizing: border-box;
}

/* 搜索框 */
.search-container {
  margin-bottom: 24rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(192, 211, 226, 0.2);
  border-radius: 20rpx;
  padding: 0 20rpx;
  transition: all 0.3s ease;
}

.search-box:focus-within {
  border-color: #DBEAF8;
  box-shadow: 0 0 0 4rpx rgba(219, 234, 248, 0.1);
  background: rgba(255, 255, 255, 0.95);
}

.search-icon {
  font-size: 28rpx;
  color: #DBEAF8;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #2d3748;
  background: transparent;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #a0aec0;
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(192, 211, 226, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
}

.clear-icon {
  font-size: 20rpx;
  color: #DBEAF8;
}

/* 分类筛选 */
.category-filter {
  margin-bottom: 24rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  gap: 16rpx;
  padding: 0 4rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 2rpx solid rgba(192, 211, 226, 0.2);
  border-radius: 20rpx;
  transition: all 0.3s ease;
  white-space: nowrap;
  min-width: 120rpx;
}

.category-item.active {
  background: #DBEAF8;
  border-color: transparent;
  box-shadow: 0 4rpx 16rpx rgba(219, 234, 248, 0.3);
  transform: translateY(-2rpx);
}

.category-icon {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 22rpx;
  color: #4a5568;
  font-weight: 500;
}

.category-item.active .category-name {
  color: #2d3748;
  font-weight: 600;
}

/* 操作工具栏 */
.action-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.toolbar-left {
  flex: 1;
}

.sort-selector {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  border: 1rpx solid rgba(192, 211, 226, 0.2);
}

.sort-icon {
  font-size: 20rpx;
  color: #DBEAF8;
}

.sort-text {
  font-size: 24rpx;
  color: #2d3748;
  font-weight: 500;
}

.sort-arrow {
  font-size: 20rpx;
  color: #DBEAF8;
}

.toolbar-right {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
  border: none;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.cloud-sync-btn {
  background: #DBEAF8;
  color: #2d3748;
  box-shadow: 0 4rpx 12rpx rgba(219, 234, 248, 0.3);
}

.batch-btn {
  background: #DBEAF8;
  color: #2d3748;
  box-shadow: 0 4rpx 12rpx rgba(219, 234, 248, 0.3);
}

.action-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.btn-icon {
  font-size: 20rpx;
}

.btn-text {
  font-size: 22rpx;
}

/* 批量操作栏 */
.batch-toolbar {
  margin: 0 30rpx 20rpx;
  background: rgba(219, 234, 248, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(219, 234, 248, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  width: calc(100% - 60rpx);
  box-sizing: border-box;
}

.batch-info {
  flex: 1;
}

.batch-text {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 500;
}

.batch-actions {
  display: flex;
  gap: 12rpx;
}

.batch-btn {
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
  border: none;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.select-all {
  background: rgba(255, 255, 255, 0.2);
  color: #2d3748;
}

.cloud-save {
  background: #DBEAF8;
  color: #2d3748;
}

.publish {
  background: rgba(72, 187, 120, 0.8);
  color: #ffffff;
}

.delete {
  background: rgba(245, 101, 101, 0.8);
  color: #ffffff;
}

.batch-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 梦境列表 */
.dreams-list {
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.dream-item {
  display: flex;
  align-items: flex-start;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  width: 100%;
  box-sizing: border-box;
}

.dream-item.selected {
  border-color: #DBEAF8;
  background: rgba(219, 234, 248, 0.1);
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(219, 234, 248, 0.2);
}

.dream-item:active:not(.selected) {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 选择框 */
.selection-box {
  margin-right: 20rpx;
  margin-top: 8rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: #DBEAF8;
  border-color: #DBEAF8;
}

.checkmark {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 梦境内容 */
.dream-content {
  flex: 1;
}

.dream-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.dream-title-section {
  flex: 1;
}

.dream-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.dream-meta {
  display: flex;
  gap: 16rpx;
  font-size: 22rpx;
  color: #718096;
}

.dream-category {
  background: rgba(219, 234, 248, 0.1);
  color: #DBEAF8;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.dream-time {
  color: #a0aec0;
}

.dream-status {
  margin-left: 16rpx;
}

.status-icon {
  font-size: 24rpx;
}

.dream-preview {
  margin-bottom: 20rpx;
}

.preview-text {
  font-size: 24rpx;
  color: #4a5568;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.dream-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dream-stats {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.word-count {
  font-size: 22rpx;
  color: #DBEAF8;
  font-weight: 500;
}

.create-time {
  font-size: 20rpx;
  color: #a0aec0;
}

/* 梦境操作按钮 */
.dream-actions {
  display: flex;
  gap: 12rpx;
}

.dream-actions .action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  padding: 0;
}

.dream-actions .edit {
  background: rgba(219, 234, 248, 0.1);
}

.dream-actions .cloud-save {
  background: rgba(219, 234, 248, 0.1);
}

.dream-actions .publish {
  background: rgba(72, 187, 120, 0.1);
}

.dream-actions .delete {
  background: rgba(245, 101, 101, 0.1);
}

.dream-actions .action-btn:active {
  transform: scale(0.9);
  opacity: 0.8;
}

.dream-actions .btn-icon {
  font-size: 24rpx;
}

/* 空状态 */
.empty-dream-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 600rpx;
  padding: 60rpx 30rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.empty-animation {
  position: relative;
  margin-bottom: 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: rgba(219, 234, 248, 0.8);
  display: block;
  margin-bottom: 20rpx;
}

.floating-stars {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 200rpx;
}

.star {
  position: absolute;
  font-size: 32rpx;
  color: rgba(219, 234, 248, 0.6);
  animation: float 3s ease-in-out infinite;
}

.star:nth-child(1) {
  top: 20rpx;
  left: 20rpx;
  animation-delay: 0s;
}

.star:nth-child(2) {
  top: 40rpx;
  right: 20rpx;
  animation-delay: 1s;
}

.star:nth-child(3) {
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 2s;
}

@keyframes float {
  0%, 100% { transform: translateY(0rpx); opacity: 0.6; }
  50% { transform: translateY(-20rpx); opacity: 1; }
}

.empty-content {
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(45, 55, 72, 0.9);
  display: block;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: rgba(113, 128, 150, 0.7);
  line-height: 1.6;
}

.empty-actions {
  margin-top: 20rpx;
}

.create-dream-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.create-dream-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.create-dream-btn .btn-icon {
  font-size: 28rpx;
  color: #2d3748;
}

.create-dream-btn .btn-text {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 600;
}

/* 加载状态 */
.loading-dream-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.loading-animation {
  position: relative;
  margin-bottom: 40rpx;
}

.loading-icon {
  font-size: 80rpx;
  color: rgba(219, 234, 248, 0.8);
  display: block;
  margin-bottom: 20rpx;
}

.loading-stars {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 120rpx;
}

.loading-stars .star {
  position: absolute;
  font-size: 24rpx;
  color: rgba(219, 234, 248, 0.6);
  animation: float 2s ease-in-out infinite;
}

.loading-stars .star:nth-child(1) {
  top: 10rpx;
  left: 10rpx;
  animation-delay: 0s;
}

.loading-stars .star:nth-child(2) {
  top: 20rpx;
  right: 10rpx;
  animation-delay: 0.7s;
}

.loading-stars .star:nth-child(3) {
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 1.4s;
}

.loading-text {
  font-size: 28rpx;
  color: rgba(113, 128, 150, 0.8);
  font-weight: 500;
}

/* 底部安全区域 */
.safe-area {
  height: 120rpx;
}