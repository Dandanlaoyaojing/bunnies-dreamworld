/* pages/draft-box/draft-box.wxss */

.draft-box-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 120rpx;
}

/* 顶部导航 */
.nav-bar {
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.nav-left, .nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 36rpx;
  color: #C0D3E2;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 统计信息卡片 */
.stats-card {
  margin: 20rpx 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #385170;
}

.stats-count {
  font-size: 24rpx;
  color: #C0D3E2;
  background: rgba(192, 211, 226, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.stats-content {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  flex: 1;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 600;
}

/* 工具栏 */
.toolbar {
  margin: 0 30rpx 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 搜索框 */
.search-section {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 20rpx;
  transition: all 0.3s ease;
}

.search-box:focus-within {
  border-color: #C0D3E2;
  box-shadow: 0 0 0 4rpx rgba(192, 211, 226, 0.1);
}

.search-icon {
  font-size: 28rpx;
  color: #a0aec0;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #2d3748;
  background: transparent;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #a0aec0;
}

/* 分类筛选 */
.filter-section {
  margin-bottom: 30rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  gap: 16rpx;
  padding: 0 4rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  white-space: nowrap;
  min-width: 120rpx;
}

.category-item.active {
  background: #DBEAF8;
  border-color: #DBEAF8;
  box-shadow: 0 4rpx 12rpx rgba(219, 234, 248, 0.3);
}

.category-icon {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 22rpx;
  color: #4a5568;
  font-weight: 500;
}

.category-item.active .category-name {
  color: #2d3748;
  font-weight: 600;
}

/* 操作区域 */
.action-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.sort-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.sort-picker {
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
}

.sort-display {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.sort-text {
  font-size: 24rpx;
  color: #4a5568;
}

.sort-icon {
  font-size: 20rpx;
  color: #C0D3E2;
}

.sort-toggle {
  width: 60rpx;
  height: 60rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.sort-toggle:active {
  background: #e2e8f0;
  transform: scale(0.95);
}

.toggle-icon {
  font-size: 24rpx;
  color: #C0D3E2;
  font-weight: bold;
}

.batch-controls {
  display: flex;
  gap: 12rpx;
}

.batch-btn, .clear-btn {
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.batch-btn {
  background: #DBEAF8;
  color: #2d3748;
}

.batch-btn:active {
  background: #C0D3E2;
  transform: scale(0.95);
}

.clear-btn {
  background: #fed7d7;
  color: #c53030;
}

.clear-btn:active {
  background: #feb2b2;
  transform: scale(0.95);
}

.btn-text {
  color: inherit;
}

/* 批量操作栏 */
.batch-toolbar {
  margin: 0 30rpx 20rpx;
  background: linear-gradient(135deg, #DBEAF8 0%, #C0D3E2 100%);
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(219, 234, 248, 0.3);
}

.batch-info {
  flex: 1;
}

.batch-text {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 600;
}

.batch-actions {
  display: flex;
  gap: 12rpx;
}

.batch-action-btn {
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.select-all-btn {
  background: rgba(255, 255, 255, 0.8);
  color: #2d3748;
}

.publish-btn {
  background: rgba(72, 187, 120, 0.8);
  color: #ffffff;
}

.delete-btn {
  background: rgba(245, 101, 101, 0.8);
  color: #ffffff;
}

.batch-action-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 草稿列表 */
.drafts-list {
  padding: 0 30rpx;
}

.draft-item {
  display: flex;
  align-items: flex-start;
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.draft-item.selected {
  border-color: #DBEAF8;
  background: rgba(219, 234, 248, 0.1);
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(219, 234, 248, 0.3);
}

.draft-item:active:not(.selected) {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 选择框 */
.selection-box {
  margin-right: 20rpx;
  margin-top: 8rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: #DBEAF8;
  border-color: #DBEAF8;
}

.checkmark {
  color: #2d3748;
  font-size: 24rpx;
  font-weight: bold;
}

/* 草稿内容 */
.draft-content {
  flex: 1;
}

.draft-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.draft-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.draft-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.draft-category {
  font-size: 22rpx;
  color: #C0D3E2;
  background: rgba(192, 211, 226, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.draft-time {
  font-size: 22rpx;
  color: #718096;
}

.draft-preview {
  margin-bottom: 20rpx;
}

.preview-text {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.draft-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.draft-stats {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.word-count {
  font-size: 22rpx;
  color: #C0D3E2;
  font-weight: 500;
}

.create-time {
  font-size: 20rpx;
  color: #a0aec0;
}

.draft-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.edit-btn {
  background: #DBEAF8;
}

.publish-btn {
  background: #c6f6d5;
}

.delete-btn {
  background: #fed7d7;
}

.action-btn:active {
  transform: scale(0.9);
  opacity: 0.8;
}

.btn-icon {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 600rpx;
  padding: 60rpx 30rpx;
  text-align: center;
}

.empty-animation {
  position: relative;
  margin-bottom: 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.6;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0rpx); }
  50% { transform: translateY(-20rpx); }
}

.floating-dots {
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
}

.dot {
  position: absolute;
  font-size: 32rpx;
  color: #C0D3E2;
  animation: dotFloat 2s ease-in-out infinite;
}

.dot:nth-child(1) {
  top: 20rpx;
  left: 30rpx;
  animation-delay: 0s;
}

.dot:nth-child(2) {
  top: 60rpx;
  right: 40rpx;
  animation-delay: 0.4s;
}

.dot:nth-child(3) {
  bottom: 40rpx;
  left: 20rpx;
  animation-delay: 0.8s;
}

@keyframes dotFloat {
  0%, 100% { opacity: 0.3; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

.empty-content {
  margin-bottom: 60rpx;
}

.empty-title {
  display: block;
  font-size: 36rpx;
  color: #2d3748;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #718096;
  line-height: 1.5;
}

.empty-actions {
  display: flex;
  gap: 20rpx;
}

.create-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #DBEAF8 0%, #C0D3E2 100%);
  border: none;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(219, 234, 248, 0.3);
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(219, 234, 248, 0.3);
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 600;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  text-align: center;
}

.loading-animation {
  position: relative;
  margin-bottom: 40rpx;
}

.loading-icon {
  font-size: 80rpx;
  opacity: 0.6;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-dots {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
}

.loading-dots .dot {
  position: absolute;
  font-size: 24rpx;
  color: #C0D3E2;
  animation: dotPulse 1.5s ease-in-out infinite;
}

.loading-dots .dot:nth-child(1) {
  top: 10rpx;
  left: 20rpx;
  animation-delay: 0s;
}

.loading-dots .dot:nth-child(2) {
  top: 30rpx;
  right: 20rpx;
  animation-delay: 0.3s;
}

.loading-dots .dot:nth-child(3) {
  bottom: 20rpx;
  left: 10rpx;
  animation-delay: 0.6s;
}

@keyframes dotPulse {
  0%, 100% { opacity: 0.3; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.3); }
}

.loading-text {
  font-size: 28rpx;
  color: #718096;
}

/* 底部安全区域 */
.safe-area {
  height: 40rpx;
}
